<UserControl x:Class="VLC_WinRT.Views.MainPages.MusicPanes.ArtistCollectionPanes.ArtistsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WinRT.Views.MainPages.MusicPanes.ArtistCollectionPanes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:triggers="using:WinRT.Triggers"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <UserControl.Resources>
        <CollectionViewSource x:Key="GroupArtists"
                              x:Name="GroupArtists"
                              IsSourceGrouped="True"
                              Source="{Binding GroupedArtists}" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Style="{StaticResource LittleHeaderTextBlockStyle}"
                   TextWrapping="NoWrap"
                   TextTrimming="CharacterEllipsis">
            <Run Text="{Binding Artists.Count}" />
            <Run Text="ARTISTS" />
        </TextBlock>
        <SemanticZoom x:Name="SemanticZoom"
                      Grid.Row="1"
                      Grid.Column="0"
                      Padding="0"
                      IsZoomOutButtonEnabled="False"
                      ViewChangeCompleted="SemanticZoom_OnViewChangeCompleted">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="ArtistListView"
                          IsItemClickEnabled="True"
                          ItemsSource="{Binding Artists}"
                          SelectionMode="None"
                          ItemContainerStyle="{StaticResource ListViewItemStyle}"
                          ItemTemplate="{StaticResource ArtistHorizontalTemplate}"
                          ItemClick="ArtistListView_OnItemClick">
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="12" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Key}"
                                                   Foreground="{StaticResource MainColor}"
                                                   FontSize="23" />
                                    </Grid>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           ItemWidth="300" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <ListView x:Name="ArtistsZoomedOutView"
                          Background="{ThemeResource ApplicationBackgroundSemiTranslucentThemeBrush}"
                          VerticalContentAlignment="Center"
                          SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="VerticalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Margin"
                                    Value="6" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           ItemWidth="200" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}">
                                <TextBlock Text="{Binding Group.Key}"
                                           Margin="5,0,0,3"
                                           VerticalAlignment="Center"
                                           FontSize="26"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap"
                                           FontWeight="Light"
                                           Foreground="{ThemeResource MainColor}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
    </Grid>
</UserControl>
