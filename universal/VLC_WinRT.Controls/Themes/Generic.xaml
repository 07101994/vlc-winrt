<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:VLC_WinRT.Controls.Themes"
                    xmlns:controls="using:VLC_WinRT.Controls">

    <Style TargetType="controls:SplitShell">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SplitShell">
                    <Grid>
                        <Grid.Resources>
                            <Storyboard x:Name="RightFlyoutFadeIn">
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RightFlyoutGridContainer"
                                                               Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0"
                                                            Value="Visible" />
                                </ObjectAnimationUsingKeyFrames>            
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RightFlyoutGridContainer"
                                                               Storyboard.TargetProperty="Opacity">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                                          Value="1">
                                        <EasingDoubleKeyFrame.EasingFunction>
                                            <ExponentialEase Exponent="4"
                                                             EasingMode="EaseOut" />
                                        </EasingDoubleKeyFrame.EasingFunction>
                                    </EasingDoubleKeyFrame>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RightFlyoutPlaneProjection"
                                                               Storyboard.TargetProperty="GlobalOffsetZ">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.0"
                                                          Value="100">
                                        <EasingDoubleKeyFrame.EasingFunction>
                                            <ExponentialEase Exponent="4"
                                                             EasingMode="EaseOut" />
                                        </EasingDoubleKeyFrame.EasingFunction>
                                    </EasingDoubleKeyFrame>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                                          Value="0">
                                        <EasingDoubleKeyFrame.EasingFunction>
                                            <ExponentialEase Exponent="4"
                                                             EasingMode="EaseOut" />
                                        </EasingDoubleKeyFrame.EasingFunction>
                                    </EasingDoubleKeyFrame>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                            <Storyboard x:Name="RightFlyoutFadeOut">
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RightFlyoutPlaneProjection"
                                                               Storyboard.TargetProperty="GlobalOffsetZ">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.0"
                                                          Value="1">
                                        <EasingDoubleKeyFrame.EasingFunction>
                                            <ExponentialEase Exponent="4"
                                                             EasingMode="EaseOut" />
                                        </EasingDoubleKeyFrame.EasingFunction>
                                    </EasingDoubleKeyFrame>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                                          Value="-50">
                                        <EasingDoubleKeyFrame.EasingFunction>
                                            <ExponentialEase Exponent="4"
                                                             EasingMode="EaseOut" />
                                        </EasingDoubleKeyFrame.EasingFunction>
                                    </EasingDoubleKeyFrame>
                                </DoubleAnimationUsingKeyFrames>                                
                                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="RightFlyoutGridContainer"
                                                               Storyboard.TargetProperty="Opacity">
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.4"
                                                          Value="0">
                                        <EasingDoubleKeyFrame.EasingFunction>
                                            <ExponentialEase Exponent="4"
                                                             EasingMode="EaseOut" />
                                        </EasingDoubleKeyFrame.EasingFunction>
                                    </EasingDoubleKeyFrame>
                                </DoubleAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RightFlyoutGridContainer"
                                                               Storyboard.TargetProperty="Visibility">
                                    <DiscreteObjectKeyFrame KeyTime="0:0:0.4"
                                                            Value="Collapsed" />
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </Grid.Resources>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup>
                                <VisualState x:Name="TopBarVisualState">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TopBarContentPresenter"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Visible" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EdgePane"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AlwaysVisibleSidebarContentPresenter"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="SideBarVisualState">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TopBarContentPresenter"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EdgePane"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Visible" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AlwaysVisibleSidebarContentPresenter"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="AlwaysVisibleSideBarVisualState">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TopBarContentPresenter"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EdgePane"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="AlwaysVisibleSidebarContentPresenter"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                    Value="Visible" />
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="EdgePane"
                              Grid.Column="0"
                              Grid.Row="0"
                              Grid.RowSpan="3"
                              Width="20" />
                        <ContentPresenter x:Name="AlwaysVisibleSidebarContentPresenter"
                                          Grid.Row="2"
                                          Grid.Column="0" />
                        <ContentPresenter x:Name="TopBarContentPresenter"
                                          Grid.Row="0"
                                          Grid.Column="0"
                                          Grid.ColumnSpan="2" />
                        <Grid x:Name="InformationGrid"
                              Grid.Row="1"
                              Grid.Column="0"
                              Grid.ColumnSpan="2">
                            <TextBlock x:Name="InformationTextBlock"
                                       TextWrapping="NoWrap"
                                       TextTrimming="CharacterEllipsis"
                                       Foreground="White"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,12,0" />
                        </Grid>

                        <ContentPresenter x:Name="ContentPresenter"
                                          Grid.Column="1"
                                          Grid.Row="2" />

                        <ContentPresenter x:Name="FooterContentPresenter" 
                                          Grid.Row="3"
                                          Grid.Column="0"
                                          Grid.ColumnSpan="3"
                                          HorizontalAlignment="Stretch"/>
                        
                        <Grid x:Name="SidebarGridContainer"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Grid.Row="0"
                              Grid.RowSpan="3"
                              Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter x:Name="SidebarContentPresenter" />
                        </Grid>

                        <Grid x:Name="RightFlyoutGridContainer"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Grid.Row="1"
                              Grid.RowSpan="3"
                              Background="#50000000"
                              Opacity="0">
                            <ContentPresenter x:Name="RightFlyoutContentPresenter"
                                              HorizontalAlignment="Stretch"
                                              MaxWidth="500">
                                <ContentPresenter.Projection>
                                    <PlaneProjection x:Name="RightFlyoutPlaneProjection" />
                                </ContentPresenter.Projection>
                            </ContentPresenter>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
