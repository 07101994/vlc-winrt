<UserControl x:Class="VLC_WINRT_APP.Controls.NoFavoriteAlbumsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="500"
             Visibility="{Binding RandomAlbums.Count, Converter={StaticResource CountToVisibilityConverter}}">

    <StackPanel MaxWidth="600"
                Margin="0,0,0,0">
        <TextBlock Text="You don't have favorite albums"
                   Style="{StaticResource HeaderTextBlockStyle}"
                   LineStackingStrategy="MaxHeight" 
                   TextWrapping="Wrap"
                   FontSize="36"/>
        <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                   Margin="0,12,0,0"
                   FontSize="22">
            <Run Text="When playing an album, press the" />
            <Run Text=""
                 FontFamily="Segoe UI Symbol"
                 Foreground="{StaticResource MainColor}" />
            <Run Text="button and you'll find your favorite albums easier than ever!" />
        </TextBlock>

    </StackPanel>
</UserControl>
