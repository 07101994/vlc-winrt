<UserControl x:Class="VLC_WINRT_APP.Controls.VideoItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Flyout x:Key="VideoInfoFlyout">
            <local:VideoItemInfoControl/>
        </Flyout>
    </UserControl.Resources>
    <Grid MinHeight="162"
          MinWidth="298"
          Holding="Grid_Holding"
          FlyoutBase.AttachedFlyout="{StaticResource VideoInfoFlyout}"
          RightTapped="Grid_RightTapped">
        <Image Source="{Binding Image}"
               Stretch="UniformToFill" />
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="#72000000"
                                  Offset="0" />
                    <GradientStop Color="#99000000"
                                  Offset="1" />
                    <GradientStop Color="#00000000"
                                  Offset="0.321" />
                    <GradientStop Color="#00000000"
                                  Offset="0.679" />
                    <GradientStop Color="#66000000"
                                  Offset="0.831" />
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1"
                       Text="{Binding Duration, Converter={StaticResource TimeSpanShortStringConverter}}"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       Margin="0,2,6,0"
                       Foreground="#99FFFFFF" />
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Bottom"
                       Margin="6"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Typography.Capitals="SmallCaps">
                    <Run Text="{Binding Title}" />
            </TextBlock>

            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="6"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Typography.Capitals="SmallCaps">
                    <Run Text="{Binding Type}"
                         Foreground="#7FFFFFFF" />
            </TextBlock>
            <ProgressBar Grid.ColumnSpan="2"
                         VerticalAlignment="Bottom"
                         Margin="0,0,0,-4"
                         Style="{StaticResource ThinProgressBar}"
                         Value="{Binding TimeWatched, Converter={StaticResource TimeSpanSecondsDoubleConverter}}"
                         Maximum="{Binding Duration, Converter={StaticResource TimeSpanSecondsDoubleConverter}}"
                         Visibility="{Binding TimeWatched.TotalSeconds, Converter={StaticResource NegatedCountToVisibilityConverter}}" />
        </Grid>
    </Grid>
</UserControl>
