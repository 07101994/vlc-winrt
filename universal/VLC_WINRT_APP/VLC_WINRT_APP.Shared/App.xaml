<Application
    x:Class="VLC_WINRT_APP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:VLC_WINRT_APP.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush"
                                     Color="Black" />
                    <SolidColorBrush x:Key="PivotHeaderForegroundUnselectedBrush"
                                     Color="#7FFFFFFF" />
                    <SolidColorBrush x:Key="ApplicationSecondaryForegroundThemeBrush"
                                     Color="LightGray" />
                    <SolidColorBrush x:Key="ApplicationThirdForegroundThemeBrush"
                                     Color="#252525" />
                    <SolidColorBrush x:Key="ApplicationBarForegroundThemeBrush"
                                     Color="#252525" />
                    <SolidColorBrush x:Key="ApplicationOverlayTranslucentThemeBrush"
                                     Color="#cc000000" />
                    <SolidColorBrush x:Key="ApplicationBackgroundSemiTranslucentThemeBrush"
                                     Color="#81252525" />
                    <SolidColorBrush x:Key="ApplicationBackgroundQuarterTranslucentThemeBrush"
                                     Color="#B3F5F5F5" />
                    <SolidColorBrush x:Key="BasicForeground"
                                     Color="White" />
                    <SolidColorBrush x:Key="SliderForegroundProgressTheneBrush"
                                     Color="WhiteSmoke" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush"
                                     Color="WhiteSmoke" />
                    <SolidColorBrush x:Key="PivotHeaderForegroundUnselectedBrush"
                                     Color="DimGray" />
                    <SolidColorBrush x:Key="ApplicationSecondaryForegroundThemeBrush"
                                     Color="DimGray" />
                    <SolidColorBrush x:Key="ApplicationThirdForegroundThemeBrush"
                                     Color="WhiteSmoke" />
                    <SolidColorBrush x:Key="ApplicationBarForegroundThemeBrush"
                                     Color="{StaticResource MainColorBase}" />
                    <SolidColorBrush x:Key="ApplicationOverlayTranslucentThemeBrush"
                                     Color="#ccffffff" />
                    <SolidColorBrush x:Key="ApplicationBackgroundSemiTranslucentThemeBrush"
                                     Color="#81FFFFFF" />
                    <SolidColorBrush x:Key="ApplicationBackgroundQuarterTranslucentThemeBrush"
                                     Color="#B3000000"/>
                    <SolidColorBrush x:Key="BasicForeground"
                                     Color="Black" />
                    <SolidColorBrush x:Key="SliderForegroundProgressTheneBrush"
                                     Color="{StaticResource MainColorBase}" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml" />
                <ResourceDictionary Source="Resources/Converters.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml" />
                <ResourceDictionary Source="Resources/DataTemplateSelectors.xaml" />
                <ResourceDictionary Source="Resources/Templates.xaml" />
                <ResourceDictionary Source="Resources/Flyouts.xaml" />
                <ResourceDictionary Source="Resources/PlatformFlyouts.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <viewModels:Locator x:Key="Locator" />
            <x:String x:Key="AppTitle">VLC Media Player</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
