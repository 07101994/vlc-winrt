<UserControl x:Class="VLC_WINRT_APP.Views.MusicPages.AlbumPageControls.MainAlbumHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.MusicPages.AlbumPage"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:albumPageControls="using:VLC_WINRT_APP.Views.MusicPages.AlbumPageControls"
             xmlns:ext="using:WinRTXamlToolkit.Controls.Extensions"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid x:Name="HeaderGrid"
          Margin="-12,0,0,0"
          Loaded="HeaderGrid_OnLoaded"
          RequestedTheme="Dark">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="3"
               x:Name="HeaderArtistImage"
               Source="{Binding CurrentAlbum.Picture}"
               Stretch="UniformToFill"
               Opacity="1"/>
        <Grid Grid.Row="0"
              Grid.RowSpan="3">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0"
                                     EndPoint="0.5,1">
                    <GradientStop Color="#B1000000"
                                  Offset="0" />
                    <GradientStop Color="#5C000000"
                                  Offset="0.5" />
                    <GradientStop Color="#00000000"
                                  Offset="1" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <userControls:HeaderControl HeaderTextBlock="{Binding CurrentAlbum.Name, Converter={StaticResource AlbumStringConverter}}"
                                        HeaderBackground="#00ffffff" />
            <Button Grid.Row="1"
                    Style="{StaticResource TextBlockButtonStyle}"
                    Command="{Binding CurrentAlbum.ViewArtist}"
                    CommandParameter="{Binding CurrentAlbum.ArtistId}"
                    Margin="56,-18,0,0"
                    RequestedTheme="Dark">
                <Button.Content>
                    <TextBlock TextWrapping="NoWrap">
                        <Run Text="{Binding CurrentArtist.Name, Converter={StaticResource ArtistStringConverter}}"
                             FontWeight="Light"
                             FontSize="24" />
                        <Run Text=""
                             FontFamily="Segoe UI Symbol"
                             FontSize="24" />
                    </TextBlock>
                </Button.Content>
            </Button>
        </Grid>
        <Grid Grid.Row="2"
              RequestedTheme="Dark">
            <AppBarButton Style="{StaticResource AppBarButtonStyleHorizontal}"
                          Margin="12,0,0,0"
                          Label="Play all"
                          Command="{Binding CurrentAlbum.PlayAlbum}"
                          CommandParameter="{Binding CurrentAlbum}">
                <AppBarButton.Icon>
                    <PathIcon Data="{StaticResource PlayPath}"/>
                </AppBarButton.Icon>
            </AppBarButton>
        </Grid>
        <Grid Grid.Row="3"
              Margin="0,12,12,0">
            <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Right">
            <Run Text="{Binding CurrentAlbum.Tracks.Count}"
                 FontSize="18"
                 Foreground="DimGray" />
            <Run Text="tracks"
                 FontSize="18"
                 Foreground="DimGray" />
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
