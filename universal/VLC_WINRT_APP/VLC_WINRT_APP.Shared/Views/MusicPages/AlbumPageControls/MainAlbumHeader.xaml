<UserControl x:Class="VLC_WINRT_APP.Views.MusicPages.AlbumPageControls.MainAlbumHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.MusicPages.AlbumPage"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:albumPageControls="using:VLC_WINRT_APP.Views.MusicPages.AlbumPageControls"
             xmlns:ext="using:WinRTXamlToolkit.Controls.Extensions"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid x:Name="HeaderGrid"
          Margin="-12,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24" />
            <ColumnDefinition MinWidth="110"
                              MaxWidth="200"
                              Width="2*"/>
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="12" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <userControls:HeaderControl Grid.Row="0"
                                    Grid.ColumnSpan="4"
                                    HeaderTextBlock="{Binding CurrentArtist.Name, Converter={StaticResource AlbumStringConverter}}"
                                    HeaderBackground="#00ffffff" />
        <Image Grid.Column="1"
               Grid.Row="1"
               Grid.RowSpan="3"
               x:Name="HeaderArtistImage"
               Source="{Binding CurrentAlbum.AlbumImage}"
               Stretch="Uniform"
               Opacity="1"
               VerticalAlignment="Top" />
        <Button Grid.Row="1"
                Grid.Column="3"
                Grid.ColumnSpan="3"
                VerticalAlignment="Top"
                Style="{StaticResource TextBlockButtonStyle}"
                Command="{Binding CurrentAlbum.ViewArtist}"
                CommandParameter="{Binding CurrentAlbum.ArtistId}">
            <Button.Content>
                <TextBlock TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis">
                        <Run Text="{Binding CurrentAlbum.Name, Converter={StaticResource ArtistStringConverter}}"
                             FontWeight="Light"
                             FontSize="24" />
                        <Run Text="{StaticResource NextSymbol}"
                             FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
                </TextBlock>
            </Button.Content>
        </Button>
        <AppBarButton Grid.Row="3"
                      Grid.Column="4"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      Icon="{Binding CurrentAlbum.Favorite, Converter={StaticResource FavoriteSymbolConverter}}"
                      VerticalAlignment="Bottom"
                      Command="{Binding CurrentAlbum.FavoriteAlbum}"
                      CommandParameter="{Binding CurrentAlbum}" />
        <AppBarButton Grid.Row="2"
                      Grid.Column="4"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      Icon="{Binding CurrentAlbum.IsPinned, Converter={StaticResource PinConverter}, ConverterParameter='icon'}"
                      VerticalAlignment="Bottom"
                      Command="{Binding CurrentAlbum.PinAlbumCommand}"
                      CommandParameter="{Binding CurrentAlbum}" />
        <AppBarButton Grid.Row="2"
                      Grid.Column="3"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      Label="add to playlist"
                      VerticalAlignment="Bottom"
                      DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}"
                      Command="{Binding OpenAddAlbumToPlaylistDialogCommand}">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource AddSymbol}"
                          FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Grid.Row="3"
                      Grid.Column="3"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      Label="Play all"
                      VerticalAlignment="Bottom"
                      Command="{Binding CurrentAlbum.PlayAlbum}"
                      CommandParameter="{Binding CurrentAlbum}">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource PlaySymbol}"
                          FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
            </AppBarButton.Icon>
        </AppBarButton>
    </Grid>
</UserControl>