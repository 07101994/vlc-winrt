<UserControl x:Class="VLC_WINRT_APP.Views.MusicPages.PlaylistControls.AddAlbumToPlaylistBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.MusicPages.PlaylistControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:placeholder="using:VLC_WINRT_APP.Views.UserControls.Placeholder"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <StackPanel DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}"
                Loaded="StackPanelRoot_Loaded">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Image Source="{Binding CurrentAlbum.AlbumImage}"
                   Height="50"
                   Stretch="Uniform" />
            <TextBlock Grid.Column="2"
                       VerticalAlignment="Center">
                    <Run Text="{Binding CurrentAlbum.Name}"
                         FontSize="16" />
                    <LineBreak />
                    <Run Text="{Binding CurrentAlbum.Artist}" />
            </TextBlock>
        </Grid>
        <TextBlock Text="Add a playlist"
                   Margin="0,12,0,0"
                   Style="{StaticResource TitleTextBlockStyle}" />
        <Grid Margin="0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Name="playlistName"
                     PlaceholderText="Playlist name" />
            <Button Grid.Column="1"
                    Content="Add"
                    Click="NewPlaylistButton_Click" />
        </Grid>
        <TextBlock Text="My playlists"
                   Style="{StaticResource TitleTextBlockStyle}" />
        <ListView Margin="0,12,0,0"
                  ItemsSource="{Binding TrackCollections}"
                  SelectedItem="{Binding CurrentTrackCollection, Mode=TwoWay}"
                  ItemTemplate="{StaticResource PhoneTrackCollectionTemplate}"
                  ItemContainerStyle="{StaticResource ListViewItemStyle}">
        </ListView>
        <placeholder:NoPlaylistPlaceholder Visibility="{Binding TrackCollections.Count, Converter={StaticResource CountToVisibilityConverter}}"
                                           Margin="0,40,0,0" />
    </StackPanel>
</UserControl>
