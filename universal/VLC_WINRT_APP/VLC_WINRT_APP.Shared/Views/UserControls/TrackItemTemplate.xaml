<UserControl x:Class="VLC_WINRT_APP.Views.UserControls.TrackItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:triggers="using:WinRT.Triggers"
             xmlns:placeholder="using:VLC_WINRT_APP.Views.UserControls.Placeholder"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:common="using:VLC_WINRT_APP.Common"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid FlyoutBase.AttachedFlyout="{StaticResource TrackItemFlyout}"
          RightTapped="Grid_RightTapped">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <interactivity:Interaction.Behaviors>
            <core:EventTriggerBehavior EventName="Holding">
                <common:OpenMenuFlyoutAction />
            </core:EventTriggerBehavior>
        </interactivity:Interaction.Behaviors>
        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   x:Name="NameTextBlock"
                   Text="{Binding Name}"
                   TextWrapping="NoWrap"
                   TextTrimming="CharacterEllipsis"
                   FontWeight="Normal"
                   Style="{StaticResource TitleTextBlockStyle}"
                   FontSize="20"
                   Margin="0,0,6,0" 
                   Loaded="NameTextBlock_OnLoaded"/>
        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Text="{Binding ArtistName, Converter={StaticResource ArtistStringConverter}}"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                   FontWeight="Light" />
        <TextBlock Grid.Column="1"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   FontWeight="Light"
                   FontSize="19"
                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                   Text="{Binding Duration.TotalSeconds, Converter={StaticResource SecondsStringConverter}}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" />
    </Grid>
</UserControl>