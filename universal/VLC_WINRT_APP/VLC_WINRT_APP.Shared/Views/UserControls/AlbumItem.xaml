<UserControl x:Class="VLC_WINRT_APP.Views.UserControls.AlbumItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:common="using:VLC_WINRT_APP.Common"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid FlyoutBase.AttachedFlyout="{StaticResource AlbumMenuFlyout}"
          Loaded="RootAlbumItem_Loaded"
          Holding="RootAlbumItem_Holding"
          RightTapped="Grid_RightTapped">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Source="{Binding AlbumImage}"
               Stretch="UniformToFill" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Text="{Binding Name, Converter={StaticResource AlbumStringConverter}}"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       FontSize="15"
                       FontWeight="Normal"
                       VerticalAlignment="Center"
                       Margin="7,0,7,0" />
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="{Binding Artist, Converter={StaticResource ArtistStringConverter}}"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       FontSize="14"
                       FontWeight="Light"
                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                       VerticalAlignment="Center"
                       Margin="7,0,7,0" />
            <Button Grid.Column="1"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Style="{StaticResource TextBlockButtonStyle}"
                    Content=""
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Bottom"
                    Foreground="#ACACAC"
                    FontFamily="Segoe UI Symbol"
                    Margin="0,0,0,0"
                    Padding="0,0,3,0"
                    Flyout="{StaticResource AlbumMenuFlyout}">
            </Button>
        </Grid>
    </Grid>
</UserControl>
