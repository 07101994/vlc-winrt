<Flyout x:Class="VLC_WINRT_APP.Views.UserControls.Flyouts.VideoInformationFlyout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:VLC_WINRT_APP.Views.UserControls.Flyouts"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d">

    <Border Background="WhiteSmoke"
            BorderBrush="DimGray"
            BorderThickness="1"
            Loaded="Grid_Loaded">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid RequestedTheme="Dark">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Grid.Row="0"
                       Grid.RowSpan="2"
                       Source="{Binding ThumbnailPath}"
                       Stretch="UniformToFill" />
                <Grid Grid.Row="1"
                      VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Margin="12,0,0,4"
                               Text="{Binding Title}"
                               TextWrapping="Wrap"
                               Style="{StaticResource SubheaderTextBlockStyle}" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding Type}"
                               TextWrapping="Wrap"
                               Style="{StaticResource BodyTextBlockStyle}"
                               VerticalAlignment="Bottom"
                               Margin="0,0,7,7" />
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0"
                                             EndPoint="0.5,1">
                            <GradientStopCollection>
                                <GradientStop Color="#00000000"
                                              Offset="0" />
                                <GradientStop Color="#87000000"
                                              Offset="1" />
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
            </Grid>
            <StackPanel Grid.Row="1"
                        Margin="12,0,0,0"
                        VerticalAlignment="Center">
                <AppBarButton x:Uid="PlayVideo"
                              Label="play video"
                              Command="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM.CloseFlyoutAndPlayVideoCommand}"
                              CommandParameter="{Binding}"
                              Click="ActionButton_Click"
                              Style="{StaticResource AppBarButtonStyleHorizontal}">
                    <AppBarButton.Icon>
                        <PathIcon Data="{StaticResource PlayPathNarrow}" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </StackPanel>
            <TextBlock Grid.Row="2"
                       Margin="12,0,12,12"
                       Text="{Binding FilePath}"
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="DimGray" />
        </Grid>
    </Border>
</Flyout>
