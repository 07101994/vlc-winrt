<Grid x:Class="VLC_WINRT_APP.Views.MainPages.MusicPanes.ArtistCollectionPanes.TracksListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WINRT_APP.Views.MainPages.MusicPanes.ArtistCollectionPanes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="400">
    <Grid.RowDefinitions>
        <RowDefinition Height="40" />
        <RowDefinition Height="Auto" />
        <RowDefinition />
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0"
               Style="{StaticResource LittleHeaderTextBlockStyle}">
            <Run Text="{Binding Tracks.Count}" />
            <Run Text="TRACKS" />
    </TextBlock>
    <Grid Grid.Row="1"
          Visibility="{Binding CurrentAlbum, TargetNullValue=Collapsed}"
          Height="90">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Grid.RowSpan="2"
               Source="{Binding AlbumImage}"
               Stretch="UniformToFill" />
        <TextBlock Grid.Column="2"
                   Grid.Row="0"
                   Style="{StaticResource LittleHeaderTextBlockStyle}"
                   VerticalAlignment="Bottom">
            <Run Text="{Binding Name}" />
        </TextBlock>
        <AppBarButton Grid.Row="1"
                      Grid.Column="2"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      Label="Play all"
                      Command="{Binding PlayAlbum}"
                      CommandParameter="{Binding}"
                      VerticalAlignment="Top">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource PlaySymbol}"
                          FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
            </AppBarButton.Icon>
        </AppBarButton>
    </Grid>
    <ListView Grid.Row="2"
              ItemsSource="{Binding Tracks}"
              SelectionMode="None"
              ItemContainerStyle="{StaticResource ListViewItemStyle}"
              IsItemClickEnabled="True"
              ItemClick="ListViewBase_OnItemClick">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Grid>
