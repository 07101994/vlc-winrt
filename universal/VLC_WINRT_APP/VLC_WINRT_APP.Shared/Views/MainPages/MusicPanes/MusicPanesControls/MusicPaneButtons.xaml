<Grid x:Class="VLC_WINRT_APP.Views.MainPages.MusicPanes.MusicPanesControls.MusicPaneButtons"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WINRT_APP.Views.MainPages.MusicPanes.MusicPanesControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="400">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="1" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>
    <AppBarButton Style="{StaticResource EllipseLessAppBarButtonStyle}"
                  Command="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM.PlayAllRandomCommand}">
        <AppBarButton.Icon>
            <FontIcon Glyph="{StaticResource ShuffleSymbol}"
                      FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
        </AppBarButton.Icon>
    </AppBarButton>
    <Grid Background="DimGray"
          Grid.Column="1"
          Margin="0,6"/>
    <AppBarButton Grid.Column="2"
                  Style="{StaticResource EllipseLessAppBarButtonStyle}"
                  Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToSearchPage}">
        <AppBarButton.Icon>
            <FontIcon Glyph="{StaticResource SearchSymbol}"
                      FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
        </AppBarButton.Icon>
    </AppBarButton>
    <AppBarButton Grid.Column="3"
                  VerticalAlignment="Center"
                  Style="{StaticResource AppBarButtonStyleHorizontal}"
                  DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}"
                  Command="{Binding StartMusicIndexingCommand}"
                  IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanNegationConverter}}"
                  Loaded="RefreshButton_Loaded">
        <AppBarButton.Icon>
            <FontIcon Glyph="{StaticResource RefreshSymbol}"
                      FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
        </AppBarButton.Icon>
    </AppBarButton>
</Grid>
