<UserControl
    x:Class="VLC_WINRT_APP.Views.MainPages.HomePageControls.HomePageButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          VerticalAlignment="Top"
          HorizontalAlignment="Right">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <AppBarButton Style="{StaticResource EllipseLessAppBarButtonStyle}"
                      Label="search"
                      Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToSearchPage}">
            <AppBarButton.Icon>
                <PathIcon Data="{StaticResource SearchPath}" />
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Grid.Column="1"
                      Style="{StaticResource EllipseLessAppBarButtonStyle}"
                      Label="open file"
                      Command="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM.PickVideo}">
            <AppBarButton.Icon>
                <PathIcon Data="{StaticResource OpenFilePath}" />
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Grid.Column="2"
                      DataContext="{Binding Source={StaticResource Locator}, Path=MainVM}"
                      IsEnabled="{Binding IsInternet}"
                      Style="{StaticResource EllipseLessAppBarButtonStyle}"
                      Label="open stream"
                      Flyout="{StaticResource PhoneOpenStreamFlyout}">
            <AppBarButton.Icon>
                <PathIcon Data="{StaticResource OnlinePath}" />
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton Grid.Column="3"
                      Style="{StaticResource EllipseLessAppBarButtonStyle}"
                      Label="settings"
                      Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToSettingsPageCommand}">
            <AppBarButton.Icon>
                <PathIcon Data="{StaticResource SettingsPath}" />
            </AppBarButton.Icon>
        </AppBarButton>
    </Grid>
</UserControl>
