<Page x:Class="VLC_WINRT_APP.Views.VideoPages.VideoPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:VLC_WINRT.Views"
      xmlns:controls="using:VLC_WINRT_APP.Controls"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      xmlns:placeholder="using:VLC_WINRT_APP.Views.UserControls.Placeholder"
      mc:Ignorable="d"
      Background="Transparent"
      DataContext="{Binding Source={StaticResource Locator}, Path=MediaPlaybackViewModel}"
      RequestedTheme="Dark">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Source="http://vignette1.wikia.nocookie.net/marvelcinematicuniverse/images/f/f0/Snapz-Pro-XScreenSnapz0013.jpg/revision/latest?cb=20140503201956"
               Stretch="UniformToFill"
               Grid.Row="0"
               Grid.RowSpan="3"/>
        <Grid x:Name="HeaderGrid"
              Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Style="{StaticResource TextBlockButtonStyle}"
                    Command="{Binding GoBack}">
                <Viewbox Height="36"
                         Width="36">
                    <Path Data="{StaticResource BackPath}"
                          Fill="White" />
                </Viewbox>
            </Button>
            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       DataContext="{Binding Source={StaticResource Locator}, Path=VideoVm}"
                       Text="{Binding CurrentVideo.Name}" />
        </Grid>

        <Grid Grid.Row="1">
            <userControls:BufferingControl />
            <controls:FadeTextBlock x:Name="Hud"
                                    x:FieldModifier="public">
                <TextBlock x:Name="HudTextBlock"
                           x:FieldModifier="public"
                           Style="{StaticResource HeaderTextBlockStyle}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </controls:FadeTextBlock>
        </Grid>

        <Border x:Name="ControlsGrid"
                Grid.Row="2"
                Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}"
                Margin="24"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <userControls:SliderControl />
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <AppBarToggleButton Grid.Column="0"
                                        Name="LockToggleButton"
                                        Icon="Permissions"
                                        IsCompact="True"
                                        VerticalAlignment="Center" />
                    <AppBarButton Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  IsCompact="True"
                                  Style="{StaticResource AppBarButtonStyleHuge}"
                                  VerticalAlignment="Center"
                                  Command="{Binding SkipBack}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE100;"
                                      FontSize="30" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Grid.Column="2"
                                  IsCompact="True"
                                  Visibility="{Binding IsPlaying, Converter={StaticResource NegatedBooleanToVisibilityConverter}}"
                                  Style="{StaticResource AppBarButtonStyleHuge}"
                                  VerticalAlignment="Center"
                                  Command="{Binding PlayOrPauseCommand}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="{StaticResource PlaySymbol}"
                                      FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets"
                                      FontSize="42" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Grid.Column="2"
                                  IsCompact="True"
                                  Visibility="{Binding IsPlaying, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  Style="{StaticResource AppBarButtonStyleHuge}"
                                  VerticalAlignment="Center"
                                  Command="{Binding PlayOrPauseCommand}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="{StaticResource PauseSymbol}"
                                      FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets"
                                      FontSize="42" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Grid.Column="3"
                                  IsCompact="True"
                                  Style="{StaticResource AppBarButtonStyleHuge}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Command="{Binding SkipAhead}">
                        <AppBarButton.Icon>
                            <FontIcon Glyph="&#xE101;"
                                      FontSize="30" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Grid.Column="4"
                                  Name="MenuButton"
                                  Icon="More"
                                  IsCompact="True"
                                  IsTabStop="False"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource AppBarButtonStyleHuge}">
                        <AppBarButton.Flyout>
                            <Flyout>
                                <userControls:VideoPlayerSettings />
                            </Flyout>
                        </AppBarButton.Flyout>
                    </AppBarButton>
                </Grid>
            </Grid>
        </Border>
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Narrow">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ControlsGrid"
                                                       Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="0"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Medium">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ControlsGrid"
                                                       Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="24" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Full">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ControlsGrid"
                                                       Storyboard.TargetProperty="Margin">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="24" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ControlsGrid"
                                                       Storyboard.TargetProperty="Padding">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="24,12" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ControlsGrid"
                                                       Storyboard.TargetProperty="Width">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="800" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>