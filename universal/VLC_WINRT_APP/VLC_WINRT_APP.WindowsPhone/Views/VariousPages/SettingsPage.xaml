<Page x:Class="VLC_WINRT_APP.Views.VariousPages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WINRT_APP.Views.VariousPages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <userControls:HeaderControl Grid.Row="0"
                                    HeaderTextBlock="Settings" />
        <Grid Grid.Row="1">
            <TextBlock HorizontalAlignment="Left"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="16,0,0,0"
                       x:Name="AppVersion" />
        </Grid>
        <Pivot Grid.Row="2"
               HeaderTemplate="{StaticResource PivotTitleTemplate}">
            <Pivot.TitleTemplate>
                <DataTemplate>
                </DataTemplate>
            </Pivot.TitleTemplate>
            <PivotItem Header="music settings">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="WARNING This is not working yet"
                                   Foreground="Red" />
                        <StackPanel x:Name="LastFmGrid"
                                    Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <userControls:VLCLogoWithGradient Height="50"
                                                                  VerticalAlignment="Center" />
                                <TextBlock Margin="6,0,0,0"
                                           Text=""
                                           Style="{StaticResource HeaderTextBlockStyle}"
                                           VerticalAlignment="Center" />
                                <Image Margin="10,0,0,0"
                                       Source="http://cdn.last.fm/flatness/badges/lastfm_black.gif"
                                       Height="50"
                                       VerticalAlignment="Center" />
                                <TextBlock Margin="12,0,0,0"
                                           Style="{StaticResource HeaderTextBlockStyle}">
                                    <Run Text="=" />
                                    <Run Text=""
                                         FontFamily="Segoe UI Symbol" />
                                </TextBlock>
                            </StackPanel>
                            <Button Content="Connect to Last.FM (enables scrobbling)"
                                    Command="{Binding NavToLastFmPage}"
                                    HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
