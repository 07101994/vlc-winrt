<Page x:Class="VLC_WINRT_APP.Views.VariousPages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WINRT_APP.Views.VariousPages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}">
        <Image x:Name="HeaderBackgroundImage"
               Source="/Assets/backgroundTop.png"
               Stretch="Uniform"
               VerticalAlignment="Top"
               Opacity="0.7" />
        <Pivot HeaderTemplate="{StaticResource PivotTitleTemplate}">
            <Pivot.Title>
                <Grid x:Name="PivotTitle"
                      Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <userControls:VLCLogoWithGradient Height="32" />
                    <TextBlock Margin="10,-3,0,0"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap"
                               VerticalAlignment="Center"
                               Grid.Column="1"
                               Text="VLC"
                               Foreground="{StaticResource MainColor}"
                               Style="{StaticResource SubheaderTextBlockStyle}" />
                    <TextBlock x:Name="AppVersion"
                               VerticalAlignment="Bottom"
                               Grid.Column="2"
                               FontWeight="Light"
                               Margin="16,0,0,0" />
                </Grid>
            </Pivot.Title>
            <PivotItem Header="general">
                <StackPanel>
                    <CheckBox Content="Manually set the application theme"
                              IsChecked="{Binding ForceAppTheme, Mode=TwoWay}" />
                    <ToggleSwitch IsEnabled="{Binding ForceAppTheme}"
                                  Header="Application theme"
                                  OffContent="Light"
                                  OnContent="Dark"
                                  IsOn="{Binding ApplicationTheme, Converter={StaticResource ApplicationThemeBooleanConverter}, Mode=TwoWay}" />
                </StackPanel>
            </PivotItem>
            <PivotItem>
                <StackPanel>
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                               Text="VLC for Windows Phone 8.1 is licensed under the GNU General Public License, version 2 (herein referred to as GPL)." />
                    <TextBlock Text="If you want to manually deploy the package by yourself, without having to pay for a Dev License, follow the steps in this link:"/>
                    <HyperlinkButton NavigateUri="https://msdn.microsoft.com/en-us/library/windows/apps/dn614128.aspx" Content="Msdn library"/>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
