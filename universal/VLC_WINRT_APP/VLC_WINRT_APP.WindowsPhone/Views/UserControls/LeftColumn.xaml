<UserControl x:Class="VLC_WINRT_APP.Views.UserControls.LeftColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:triggers="using:WinRT.Triggers"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid x:Name="ColumnGrid"
          Width="340"
          Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="1" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="*" />
            <RowDefinition Height="12"
                           x:Name="SeparatorRowDefinition" />
            <RowDefinition Height="Auto"
                           x:Name="MiniPlayersRowDefinition" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1"
              Grid.RowSpan="8"
              Background="{StaticResource MainColor}" />
        <StackPanel Orientation="Horizontal"
                    Height="45"
                    Margin="32,0,0,0"
                    x:Name="HeaderGrid"
                    Grid.Row="1">
            <Path Data="{StaticResource VLCFlatPath}"
                  Stretch="Uniform"
                  Fill="{StaticResource MainColor}"
                  Width="30"
                  Height="30" />
            <TextBlock x:Name="TitleTextBlock"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="6,-2,0,0"
                       VerticalAlignment="Center"
                       FontWeight="Light">
                <Run Text="VLC"
                     FontSize="28"
                     Foreground="{StaticResource MainColor}" />
                <Run Text="media player"
                     FontSize="18"
                     Foreground="Gray" />
            </TextBlock>
        </StackPanel>
        <local:VLCSearchBox Grid.Row="3"
                            x:Name="LargeSearchBox"
                            Margin="32,0,20,0" />
        <ListView Grid.Row="5"
                  x:Name="PanelsListView"
                  ItemsSource="{Binding Panels}"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                  ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
                  ItemTemplate="{StaticResource SidebarItemTemplate}"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                  ScrollViewer.VerticalScrollMode="Disabled">
            <triggers:Interactions.Triggers>
                <triggers:EventTrigger EventName="ItemClick">
                    <triggers:InvokeCommandAction Command="{Binding GoToPanelCommand}"
                                                  PassEventArgsToCommand="True" />
                </triggers:EventTrigger>
            </triggers:Interactions.Triggers>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Width="340" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <Grid Background="{StaticResource MainColor}"
              Grid.ColumnSpan="2"
              Grid.Row="6"
              Height="1"
              VerticalAlignment="Center"
              Margin="32,0"
              DataContext="{Binding Source={StaticResource Locator}, Path=MusicPlayerVM}"
              Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <Grid Grid.Row="7"
              DataContext="{Binding Source={StaticResource Locator}, Path=MusicPlayerVM}"
              Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
            <local:MiniPlayer VerticalAlignment="Bottom"
                              Margin="32,0,20,0"
                              x:Name="MiniPlayer"
                              Height="315" />
            <Button HorizontalAlignment="Center"
                    Style="{StaticResource TextBlockButtonStyle}"
                    x:Name="SnapMiniPlayer"
                    Visibility="Collapsed">
                <Button.Flyout>
                    <Flyout>
                        <local:MiniPlayer Width="300" />
                    </Flyout>
                </Button.Flyout>
                <StackPanel>
                    <Path Data="F1M-224.553,1265L-246.174,1283.52 -267.792,1302.04 -267.792,1265 -267.792,1227.97 -246.174,1246.49 -224.553,1265z"
                          Height="30"
                          Width="30"
                          HorizontalAlignment="Center"
                          Stretch="Uniform"
                          Fill="{StaticResource MainColor}"
                          Margin="-9,0,0,0" />
                    <TextBlock Text="NOW PLAYING"
                               TextWrapping="Wrap"
                               TextAlignment="Center" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>