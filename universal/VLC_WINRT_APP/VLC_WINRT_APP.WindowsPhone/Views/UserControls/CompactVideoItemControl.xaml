<UserControl x:Class="VLC_WINRT_APP.Views.UserControls.CompactVideoItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Border Background="WhiteSmoke"
            Margin="0,0,6,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image Grid.Row="0"
                   Source="/Assets/NoCover.jpg"
                   Stretch="UniformToFill"
                   Width="Auto"
                   Height="Auto" />
            <Image Grid.Row="0"
                   Source="{Binding Image}"
                   Stretch="UniformToFill"
                   Width="Auto"
                   Height="Auto"
                   HorizontalAlignment="Center"/>
            <Grid Grid.Row="2"
                  Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="{Binding Title}"
                           TextWrapping="NoWrap"
                           TextTrimming="WordEllipsis"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Margin="7,0" />
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="{Binding Type}"
                           TextWrapping="NoWrap"
                           TextTrimming="WordEllipsis"
                           FontSize="16"
                           Margin="7,0,7,7" />
                <Button Grid.Column="1"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Content=""
                        Foreground="DimGray"
                        FontFamily="Segoe UI Symbol"
                        Margin="0,0,0,7">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="play all"
                                            Command="{Binding PlayAlbum}"
                                            CommandParameter="{Binding}" />
                            <MenuFlyoutItem Text="favorite"
                                            Command="{Binding FavoriteAlbum}"
                                            CommandParameter="{Binding}" />
                            <MenuFlyoutItem Text="view artist"
                                            Command="{Binding ViewArtist}"
                                            CommandParameter="{Binding ArtistId}" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>
