    <!-- /!\ DO NOT REMOVE THIS COMMENTED CODE !! /!\ -->
    <Border Margin="0,0,12,0"
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0"
                   Source="/Assets/NoCover.jpg"
                   Stretch="UniformToFill"
                   Width="Auto"
                   Height="Auto" />
            <Image Grid.Row="0"
                   Source="{Binding Image}"
                   Stretch="UniformToFill"
                   Width="Auto"
                   Height="Auto"
                   HorizontalAlignment="Center" />
            <Grid Grid.Row="1"
                  Width="Auto"
                  Margin="0,3,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Grid.ColumnSpan="3"
                           Text="{Binding Title}"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="15"
                           FontWeight="Normal"
                           Margin="7,0" />
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="{Binding Duration, Converter={StaticResource TimeSpanShortStringConverter}}"
                           Foreground="DimGray"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="16"
                           Margin="7,0,7,0"
                           FontWeight="Light" />
                <Button Grid.Column="1"
                        Grid.Row="1"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource TextBlockButtonStyle}"
                        Content=""
                        Foreground="#ACACAC"
                        FontFamily="Segoe UI Symbol"
                        Margin="0,0,3,0">
                    <Button.Flyout>
                        <Flyout Placement="Full">
                            <Grid Background="WhiteSmoke"
                                  MaxHeight="400"
                                  Margin="40,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid RequestedTheme="Dark">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0"
                                           Grid.RowSpan="2"
                                           Source="{Binding Image}"
                                           Stretch="UniformToFill" />
                                    <Grid Grid.Row="1"
                                          VerticalAlignment="Bottom">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Margin="12,0,0,4"
                                                   Text="{Binding Title}"
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource SubheaderTextBlockStyle}" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Type}"
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource BodyTextBlockStyle}" 
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,7,7"/>
                                        <Grid.Background>
                                            <LinearGradientBrush StartPoint="0.5,0"
                                                                 EndPoint="0.5,1">
                                                <GradientStopCollection>
                                                    <GradientStop Color="#00000000"
                                                                  Offset="0" />
                                                    <GradientStop Color="#87000000"
                                                                  Offset="1" />
                                                </GradientStopCollection>
                                            </LinearGradientBrush>
                                        </Grid.Background>
                                    </Grid>
                                </Grid>
                                <StackPanel Grid.Row="1"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center">
                                    <AppBarButton x:Uid="PlayVideo" Label="play video"
                                                  Icon="Play"
                                                  Style="{StaticResource AppBarButtonStyleHorizontal}"
                                                  Foreground="{StaticResource MainColor}"
                                                  Command="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM.OpenVideo}"
                                                  CommandParameter="{Binding}" />
                                </StackPanel>
                                <TextBlock Grid.Row="2"
                                           Margin="12,0,12,12"
                                           Text="{Binding FilePath}"
                                           Style="{StaticResource BodyTextBlockStyle}"
                                           Foreground="DimGray"/>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Grid>
            <ProgressBar Grid.Row="2"
                         VerticalAlignment="Bottom"
                         Margin="0,0,0,-2"
                         Style="{StaticResource ThinProgressBar}"
                         Value="{Binding TimeWatched, Converter={StaticResource TimeSpanSecondsDoubleConverter}}"
                         Maximum="{Binding Duration, Converter={StaticResource TimeSpanSecondsDoubleConverter}}"
                         Visibility="{Binding TimeWatched.TotalSeconds, Converter={StaticResource NegatedCountToVisibilityConverter}}" />
        </Grid>
    </Border>


</UserControl>