<Page x:Class="VLC_WINRT_APP.Views.MusicPages.MusicPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:winrtext="using:WinRTXamlToolkit.Controls.Extensions"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      xmlns:musicNowPlayingControls="using:VLC_WINRT_APP.Views.MusicPages.MusicNowPlayingControls"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=MusicPlayerVM}">

    <Grid RequestedTheme="Dark"
          Background="Black">
        <Image Source="{Binding CurrentArtist.Picture}"
               Stretch="UniformToFill"
               Opacity="0.3"
               winrtext:ImageExtensions.FadeInOnLoaded="True" />
        <Pivot Margin="0,20,0,18"
               HeaderTemplate="{StaticResource PivotTitleTemplate}">
            <PivotItem x:Uid="NowPlaying"
                       Header="now playing">
                <musicNowPlayingControls:MusicNowPlaying />
            </PivotItem>
            <PivotItem x:Uid="Playlist"
                       Header="playlist">
                <Grid>
                    <ListView ItemsSource="{Binding TrackCollection.Playlist}"
                              IsItemClickEnabled="True"
                              SelectionMode="None"
                              ItemTemplate="{StaticResource WPTrackTemplateWONumber}"
                              ItemContainerStyle="{StaticResource ListViewItemStyle}">
                        <ListView.ItemContainerTransitions>
                            <TransitionCollection>
                                <AddDeleteThemeTransition />
                                <EntranceThemeTransition />
                            </TransitionCollection>
                        </ListView.ItemContainerTransitions>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <triggers:Interactions.Triggers>
                            <triggers:EventTrigger EventName="ItemClick">
                                <triggers:InvokeCommandAction Command="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM.TrackClickedCommand}"
                                                              PassEventArgsToCommand="True" />
                            </triggers:EventTrigger>
                        </triggers:Interactions.Triggers>
                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem x:Uid="MoreHeader"
                       Header="more">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentArtist.Biography}"
                                   Style="{StaticResource BodyTextBlockStyle}" />
                        <Button Content="see shows"
                                Command="{Binding CurrentArtist.SeeArtistShowsCommand}"
                                CommandParameter="{Binding CurrentArtist}" />
                        <GridView Margin="0,24,0,0"
                                  IsSwipeEnabled="False"
                                  SelectionMode="None"
                                  IsItemClickEnabled="True"
                                  ItemsSource="{Binding CurrentArtist.OnlinePopularAlbumItems}"
                                  ItemTemplate="{StaticResource PopularAlbumTemplate}"
                                  Header="popular albums"
                                  HeaderTemplate="{StaticResource PhoneHeaderTemplate}">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VariableSizedWrapGrid Orientation="Horizontal"
                                                           Loaded="VariableSizedWrapGrid_Loaded" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                        <GridView Margin="0,24,0,0"
                                  x:Uid="SimilarArtists"
                                  IsSwipeEnabled="False"
                                  SelectionMode="None"
                                  IsItemClickEnabled="True"
                                  ItemsSource="{Binding CurrentArtist.OnlineRelatedArtists}"
                                  ItemTemplate="{StaticResource SimilarArtistTemplate}"
                                  Header="similar artists"
                                  HeaderTemplate="{StaticResource PhoneHeaderTemplate}">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VariableSizedWrapGrid Orientation="Horizontal"
                                                           Loaded="VariableSizedWrapGrid_Loaded" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
