<Page x:Class="VLC_WINRT_APP.Views.MusicPages.MusicPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WINRT_APP.Views.MusicPages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="12" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Source="/Assets/background.jpg"
               Stretch="UniformToFill"
               Opacity="0.4"
               Grid.RowSpan="4" />
        <TextBlock Text="{Binding CurrentArtist.CurrentAlbumItem.Name}"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Typography.Capitals="SmallCaps"
                   FontSize="23"
                   Margin="12,20,0,0"
                   VerticalAlignment="Center" />
        <Hub Grid.Row="2">
            <Hub.Sections>
                <HubSection>
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="173" />
                                        <ColumnDefinition Width="12" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Image Source="{Binding CurrentArtist.CurrentAlbumItem.Picture}"
                                               Stretch="UniformToFill"
                                               Width="173"
                                               Height="173"
                                               VerticalAlignment="Top" />
                                    </Grid>
                                    <Grid Grid.Column="2"
                                          Height="173"
                                          VerticalAlignment="Top">
                                        <StackPanel>
                                            <TextBlock Text="{Binding CurrentArtist.Name}"
                                                       Style="{StaticResource MessageDialogTitleStyle}" />
                                            <TextBlock Text="{Binding CurrentArtist.CurrentAlbumItem.Year}"
                                                       Style="{StaticResource TitleTextBlockStyle}" />
                                            <TextBlock Style="{StaticResource TitleTextBlockStyle}">
                    <Run Text="{Binding CurrentArtist.CurrentAlbumItem.Tracks.Count}" />
                    <Run Text="tracks" />
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="-21,0,0,0"
                                                    VerticalAlignment="Bottom">
                                            <AppBarToggleButton IsChecked="{Binding CurrentArtist.CurrentAlbumItem.Favorite}"
                                                                Label="Like">
                                                <AppBarToggleButton.Icon>
                                                    <FontIcon Glyph="&#xE0A5;" />
                                                </AppBarToggleButton.Icon>
                                            </AppBarToggleButton>
                                            <AppBarToggleButton Margin="-9,0,0,0"
                                                                Icon="Play"
                                                                Label="Play all"
                                                                Command="{Binding CurrentArtist.CurrentAlbumItem.PlayAlbum}"
                                                                CommandParameter="{Binding CurrentArtist.CurrentAlbumItem}" />
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <ListView ItemsSource="{Binding CurrentArtist.CurrentAlbumItem.Tracks}"
                                              IsItemClickEnabled="True"
                                              SelectionMode="None"
                                              ItemTemplate="{StaticResource DarkTrackTemplate}">
                                        <triggers:Interactions.Triggers>
                                            <triggers:EventTrigger EventName="ItemClick">
                                                <triggers:InvokeCommandAction Command="{Binding TrackClickedCommand}"
                                                                              PassEventArgsToCommand="True" />
                                            </triggers:EventTrigger>
                                        </triggers:Interactions.Triggers>
                                    </ListView>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection Header="BIOGRAPHY">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CurrentArtist.Biography}"
                                       Style="{StaticResource BodyTextBlockStyle}" />
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection Header="POPULAR ALBUMS">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <GridView x:Name="PopularItemGridView"
                                      IsSwipeEnabled="False"
                                      SelectionMode="None"
                                      IsItemClickEnabled="True"
                                      ItemsSource="{Binding CurrentArtist.OnlinePopularAlbumItems}"
                                      ItemTemplate="{StaticResource PopularAlbumTemplate}">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VariableSizedWrapGrid Orientation="Horizontal"
                                                               Loaded="VariableSizedWrapGrid_Loaded" />
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                            </GridView>
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection Header="SIMILAR ARTISTS">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <GridView x:Name="PopularItemGridView"
                                      IsSwipeEnabled="False"
                                      SelectionMode="None"
                                      IsItemClickEnabled="True"
                                      ItemsSource="{Binding CurrentArtist.OnlineRelatedArtists}"
                                      ItemTemplate="{StaticResource SimilarArtistTemplate}">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VariableSizedWrapGrid Orientation="Horizontal"
                                                               Loaded="VariableSizedWrapGrid_Loaded" />
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                            </GridView>
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
            </Hub.Sections>
        </Hub>
    </Grid>
</Page>
