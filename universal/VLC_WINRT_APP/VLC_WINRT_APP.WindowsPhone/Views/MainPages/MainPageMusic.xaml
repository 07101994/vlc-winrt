<Page x:Class="VLC_WINRT_APP.Views.MainPages.MainPageMusic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      xmlns:artistPageControls="using:VLC_WINRT_APP.Views.MusicPages.ArtistPageControls"
      xmlns:musicPages="using:VLC_WINRT_APP.Views.MusicPages"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="600"
      x:Name="MusicLibrary"
      DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}">

    <Page.Resources>
        <CollectionViewSource x:Name="AlbumsGroupedByName"
                              Source="{Binding Artists}"
                              IsSourceGrouped="True"
                              ItemsPath="Albums" />
    </Page.Resources>

    <Grid Margin="0,0,0,0"
          x:Name="RootGrid">
        <Pivot Title="music">
            <Pivot.TitleTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               FontSize="42"
                               Foreground="{StaticResource MainColor}"
                               Style="{StaticResource HeaderTextBlockStyle}" />
                </DataTemplate>
            </Pivot.TitleTemplate>
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               Height="50"
                               TextWrapping="NoWrap"
                               TextTrimming="None"
                               FontSize="32"
                               FontWeight="Light"
                               LineHeight="30"
                               Margin="0,0,5,0" />
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <PivotItem Header="albums">
                <SemanticZoom x:Name="SemanticZoomAlbumsByArtist"
                              ScrollViewer.HorizontalScrollMode="Disabled"
                              ViewChangeCompleted="SemanticZoom_OnViewChangeCompletedArtistByName">
                    <SemanticZoom.ZoomedOutView>
                        <GridView ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                  ItemTemplate="{StaticResource SemanticZoomOutViewArtistTemplate}">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid x:Name="ZoomedOutItemsWrapGrid" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </SemanticZoom.ZoomedOutView>
                    <SemanticZoom.ZoomedInView>
                        <ListView x:Name="ZoomedInListView"
                                  ItemsSource="{Binding Source={StaticResource AlbumsGroupedByName}}"
                                  IsItemClickEnabled="True"
                                  SelectionMode="None"
                                  ItemTemplate="{StaticResource SemanticZoomInViewAlbumTemplate}"
                                  ItemContainerStyle="{StaticResource ListViewItemStyle}">
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.Panel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid Orientation="Horizontal"
                                                                   ItemHeight="300"
                                                                   ItemWidth="250"
                                                                   Margin="0,0,0,25" />
                                        </ItemsPanelTemplate>
                                    </GroupStyle.Panel>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Bottom"
                                                       Foreground="{StaticResource MainColor}"
                                                       TextWrapping="Wrap"
                                                       Typography.Capitals="SmallCaps"
                                                       FontSize="22"
                                                       FontWeight="Light"
                                                       Tapped="Header_Tapped" />
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                        </ListView>
                    </SemanticZoom.ZoomedInView>
                </SemanticZoom>
            </PivotItem>
            <PivotItem Header="artists">
                <musicPages:ArtistsPivotItem />
            </PivotItem>
            <PivotItem Header="songs">
                <ListView x:Name="RadDataGrid"
                          Grid.Row="3"
                          Visibility="Collapsed"
                          ItemsSource="{Binding Tracks}"
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                          ItemContainerStyle="{StaticResource HorizontalListViewItemStyle}"
                          Grid.RowSpan="2">
                    <triggers:Interactions.Triggers>
                        <triggers:EventTrigger EventName="ItemClick">
                            <triggers:InvokeCommandAction Command="{Binding TrackClickedCommand}"
                                                          PassEventArgsToCommand="True" />
                        </triggers:EventTrigger>
                    </triggers:Interactions.Triggers>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <userControls:TrackItemTemplate />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>
        </Pivot>
        <!--<ListView ItemsSource="{Binding Panels}"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                  Grid.Row="1"
                  ItemClick="Panels_OnItemClick"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"
                                Height="50" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="50"
                          Margin="0,0,5,0">
                        <TextBlock Text="{Binding Title}"
                                   Foreground="{Binding Color}"
                                   TextWrapping="NoWrap"
                                   TextTrimming="None"
                                   Style="{StaticResource SubheaderTextBlockStyle}"
                                   Margin="0,0,5,0" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
        <!--<grid:RadDataGrid x:Name="RadDataGrid"
                          ItemsSource="{Binding Track}"
                          Grid.Row="3"
                          AutoGenerateColumns="False"
                          UserGroupMode="Disabled"
                          UserEditMode="None"
                          Visibility="Collapsed"
                          GridLinesBrush="#15FFFFFF"
                          BorderBrush="#15FFFFFF"
                          SelectionMode="Single"
                          SelectionChanged="RadDataGrid_OnSelectionChanged">
            <grid:RadDataGrid.Columns>
                <grid:DataGridTextColumn PropertyName="Name"
                                         Header="NAME" />
                <grid:DataGridTextColumn PropertyName="ArtistName"
                                         Header="ARTIST" />
                <grid:DataGridTextColumn PropertyName="AlbumName"
                                         Header="ALBUM" />
            </grid:RadDataGrid.Columns>
        </grid:RadDataGrid>-->
        <GridView Grid.Row="3"
                  x:Name="FavoriteAlbumsGridView"
                  Visibility="Collapsed"
                  ItemsSource="{Binding FavoriteAlbums}"
                  ItemTemplate="{StaticResource SemanticZoomInViewAlbumTemplate}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  Grid.RowSpan="2">
            <triggers:Interactions.Triggers>
                <triggers:EventTrigger EventName="ItemClick">
                    <triggers:InvokeCommandAction Command="{Binding AlbumClickedCommand}"
                                                  PassEventArgsToCommand="True" />
                </triggers:EventTrigger>
            </triggers:Interactions.Triggers>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VariableSizedWrapGrid Orientation="Horizontal"
                                           ItemHeight="200"
                                           ItemWidth="200" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar Style="{StaticResource VLCCommandBarStyle}">
            <CommandBar.PrimaryCommands>
                <AppBarButton Icon="Shuffle"
                              Label="random" />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
