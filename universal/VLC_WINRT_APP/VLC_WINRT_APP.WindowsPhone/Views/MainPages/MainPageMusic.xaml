<UserControl x:Class="VLC_WINRT_APP.Views.MainPages.MainPageMusic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="600"
      DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}">

    <Frame x:Name="MainPageMusicContentPresenter"
           x:FieldModifier="public"
           Background="Transparent"
           Loaded="MainPageMusicContentPresenter_OnLoaded">
        <Frame.ContentTransitions>
            <TransitionCollection>
                <EdgeUIThemeTransition x:Name="MainFrameThemeTransition"
                                       x:FieldModifier="public"
                                       Edge="Bottom" />
            </TransitionCollection>
        </Frame.ContentTransitions>
    </Frame>
</UserControl>
