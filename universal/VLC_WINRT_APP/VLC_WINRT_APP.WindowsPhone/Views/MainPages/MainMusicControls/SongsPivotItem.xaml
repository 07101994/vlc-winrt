<Page x:Class="VLC_WINRT_APP.Views.MainPages.MainMusicControls.SongsPivotItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WINRT_APP.Views.MainPages.MainMusicControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:scrollWatchedSelector="using:ScrollWatchedSelector"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      xmlns:placeholder="using:VLC_WINRT_APP.Views.UserControls.Placeholder"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="400"
      d:DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}">
    <Page.Resources>
        <CollectionViewSource x:Key="GroupTracks"
                              x:Name="GroupTracks"
                              IsSourceGrouped="True"
                              Source="{Binding AlphaGroupedTracks}" />
    </Page.Resources>
    <Grid Margin="0,-12,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}">
            <ComboBox ItemsSource="{Binding MusicViewCollection}"
                      SelectedItem="{Binding MusicView, Mode=TwoWay}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource MainColor}"
                      Style="{StaticResource HeaderComboBoxStyle}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="0,0,6,0"
                                   Text="{Binding Converter={StaticResource MusicViewStringifyConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <placeholder:NothingToSeeHere Grid.Row="1"
                                      Visibility="{Binding Tracks.Count, Converter={StaticResource CountToVisibilityConverter}}"
                                      VerticalAlignment="Center" />
        <SemanticZoom Grid.Row="1"
                      ViewChangeCompleted="SemanticZoom_OnViewChangeCompleted">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="TracksZoomedInView"
                          ItemsSource="{Binding Source={StaticResource GroupTracks}}"
                          SelectionMode="None"
                          IsItemClickEnabled="True"
                          ItemContainerStyle="{StaticResource HorizontalListViewItemStyle}"
                          ItemTemplate="{StaticResource WPLightTrackTemplateWONumber}">
                    <triggers:Interactions.Triggers>
                        <triggers:EventTrigger EventName="ItemClick">
                            <triggers:InvokeCommandAction Command="{Binding PlayAllSongsCommand}"
                                                          PassEventArgsToCommand="True" />
                        </triggers:EventTrigger>
                    </triggers:Interactions.Triggers>
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <AddDeleteThemeTransition />
                            <EntranceThemeTransition />
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Margin="0,0,0,60" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="2"
                                            BorderBrush="{StaticResource MainColor}"
                                            Background="Transparent"
                                            Height="63"
                                            Width="63"
                                            Margin="0,12,0,0">
                                        <Grid>
                                            <TextBlock Text="{Binding Key}"
                                                       Foreground="{StaticResource MainColor}"
                                                       Margin="3,0,0,3"
                                                       VerticalAlignment="Bottom"
                                                       FontSize="23" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <GridView x:Name="TracksZoomedOutView"
                          Background="#D8000000">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="VerticalContentAlignment"
                                    Value="Stretch"/>
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Loaded="ItemsWrapGrid_Loaded"
                                           SizeChanged="ItemsWrapGrid_SizeChanged"
                                           Orientation="Horizontal"
                                           Margin="0,24,-12,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="{StaticResource MainColor}"
                                  Margin="0,0,12,12">
                                <TextBlock Text="{Binding Group.Key}"
                                           Foreground="White"
                                           Margin="5,0,0,3"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Left"
                                           FontSize="36" />
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
    </Grid>
</Page>
