            </DoubleAnimation>
        </Storyboard>-->
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}">
            <ComboBox ItemsSource="{Binding MusicViewCollection}"
                      SelectedItem="{Binding MusicView, Mode=TwoWay}"
                      BorderThickness="1"
                      BorderBrush="{StaticResource MainColor}"
                      Style="{StaticResource HeaderComboBoxStyle}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="0,0,6,0"
                                   Text="{Binding Converter={StaticResource MusicViewStringifyConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <placeholder:NothingToSeeHere Grid.Row="1"
                                      Visibility="{Binding Tracks.Count, Converter={StaticResource CountToVisibilityConverter}}"
                                      VerticalAlignment="Center" />
        <SemanticZoom Grid.Row="1"
                      ViewChangeCompleted="SemanticZoom_OnViewChangeCompleted">
            <SemanticZoom.ZoomedInView>
                <scrollWatchedSelector:ScrollWatchedListView x:Name="TracksZoomedInView"
                                                             ItemsSource="{Binding Source={StaticResource GroupTracks}}"
                                                             SelectionMode="None"
                                                             IsItemClickEnabled="True"
                                                             ItemContainerStyle="{StaticResource HorizontalListViewItemStyle}"
                                                             ItemTemplate="{StaticResource WPLightTrackTemplateWONumber}"
                                                             GoingTopOrBottom="RadDataGrid_OnGoingTopOrBottom">
                    <triggers:Interactions.Triggers>
                        <triggers:EventTrigger EventName="ItemClick">
                            <triggers:InvokeCommandAction Command="{Binding TrackClickedCommand}"
                                                          PassEventArgsToCommand="True" />
                        </triggers:EventTrigger>
                    </triggers:Interactions.Triggers>
                    <scrollWatchedSelector:ScrollWatchedListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <AddDeleteThemeTransition />
                            <EntranceThemeTransition />
                        </TransitionCollection>
                    </scrollWatchedSelector:ScrollWatchedListView.ItemContainerTransitions>
                    <scrollWatchedSelector:ScrollWatchedListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Margin="0,0,0,60" />
                        </ItemsPanelTemplate>
                    </scrollWatchedSelector:ScrollWatchedListView.ItemsPanel>
                    <scrollWatchedSelector:ScrollWatchedListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="2"
                                            BorderBrush="{StaticResource MainColor}"
                                            Background="Transparent"
                                            Height="50"
                                            Width="50"
                                            Margin="0,12,0,0">
                                        <Grid>
                                            <TextBlock Text="{Binding Key}"
                                                       Foreground="{StaticResource MainColor}"
                                                       Margin="3,0,0,3"
                                                       VerticalAlignment="Bottom"
                                                       FontSize="18" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </scrollWatchedSelector:ScrollWatchedListView.GroupStyle>
                </scrollWatchedSelector:ScrollWatchedListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <ListView x:Name="TracksZoomedOutView"
                          ItemContainerStyle="{StaticResource HorizontalListViewItemStyle}"
                          Background="Black">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="{StaticResource MainColor}"
                                  Height="50">
                                <TextBlock Text="{Binding Group.Key}"
                                           Foreground="White"
                                           FontSize="19"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Bottom"
                                           Margin="3,0,0,3" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
    </Grid>
</Page>
