<Page x:Class="VLC_WINRT_APP.Views.MainPages.MainVideoControls.CameraRollPivotItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WINRT_APP.Views.MainPages.MainVideoControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:placeholder="using:VLC_WINRT_APP.Views.UserControls.Placeholder"
      mc:Ignorable="d">

    <Grid Margin="0,-12,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="camera roll"
                   Style="{StaticResource SubheaderTextBlockStyle}"
                   Foreground="{StaticResource MainColor}" />
        <GridView Grid.Row="1"
                  ItemsSource="{Binding CameraRoll}"
                  ItemTemplate="{StaticResource PhoneCompactVideoTemplate}"
                  Margin="0,0,-20,0"
                  IsItemClickEnabled="True">
            <triggers:Interactions.Triggers>
                <triggers:EventTrigger EventName="ItemClick">
                    <triggers:InvokeCommandAction Command="{Binding OpenVideo}"
                                                  PassEventArgsToCommand="True" />
                </triggers:EventTrigger>
            </triggers:Interactions.Triggers>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"
                                   SizeChanged="VideosWrapGrid_SizeChanged" 
                                   Margin="0,0,0,60"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
        <placeholder:NoCameraVideos Grid.Row="1"
                                    Margin="0,50,0,0"
                                    Visibility="{Binding CameraRoll.Count, Converter={StaticResource CountToVisibilityConverter}}" />
    </Grid>
</Page>
