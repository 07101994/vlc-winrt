<UserControl x:Class="VLC_WINRT_APP.Views.UserControls.MiniPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT.Views.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="using:VLC_WINRT_APP.Converters"
             mc:Ignorable="d"
             DataContext="{Binding Source={StaticResource Locator}, Path=MusicPlayerVM}"
             Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
    <StackPanel Margin="42,0,20,24">
        <TextBlock Text="{Binding CurrentPlayingArtist.Name}"
                   Style="{StaticResource SubheaderTextBlockStyle}" />
        <TextBlock Text="{Binding CurrentTrackItem.Name}"
                   Style="{StaticResource SubheaderTextBlockStyle}"
                   FontSize="18" />
        <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="170" />
            </Grid.ColumnDefinitions>
            <Image Source="{Binding CurrentPlayingArtist.CurrentAlbumItem.Picture}"
                   Width="130"
                   Stretch="UniformToFill" />
            <TextBlock Text="{Binding CurrentPlayingArtist.CurrentAlbumItem.Name}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Grid.Column="1"
                       Margin="12,0,0,0" />
        </Grid>
        <Slider Value="{Binding PositionInSeconds, Mode=TwoWay}"
                Maximum="{Binding TimeTotal.TotalSeconds}"
                Style="{StaticResource VLCSlider}" />
        <Grid Margin="0,-38,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding PositionInSeconds, Converter={StaticResource SecondsStringConverter}}"
                       HorizontalAlignment="Left"
                       Grid.Column="0"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Foreground="#7FFFFFFF" />
            <TextBlock Text="{Binding TimeTotal.TotalSeconds, Converter={StaticResource SecondsStringConverter}}"
                       HorizontalAlignment="Right"
                       Grid.Column="1"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Foreground="#7FFFFFFF" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource TextBlockButtonStyle}"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Command="{Binding PlayPreviousCommand}"
                    IsEnabled="{Binding CanGoPrevious}">
                <SymbolIcon Symbol="Previous" />
            </Button>
            <Button Style="{StaticResource TextBlockButtonStyle}"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Command="{Binding PlayOrPauseCommand}"
                    Visibility="{Binding IsPlaying, Converter={StaticResource NegatedBooleanToVisibilityConverter}}">
                <SymbolIcon Symbol="Play" />
            </Button>
            <Button Style="{StaticResource TextBlockButtonStyle}"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Command="{Binding PlayOrPauseCommand}"
                    Visibility="{Binding IsPlaying, Converter={StaticResource BooleanToVisibilityConverter}}">
                <SymbolIcon Symbol="Pause" />
            </Button>
            <Button Style="{StaticResource TextBlockButtonStyle}"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Command="{Binding PlayNextCommand}"
                    IsEnabled="{Binding CanGoNext}">
                <SymbolIcon Symbol="Next" />
            </Button>
            <Button Style="{StaticResource TextBlockButtonStyle}"
                    Grid.Column="3"
                    HorizontalAlignment="Right">
                <Button.Flyout>
                    <Flyout>
                        <Slider Orientation="Vertical"
                                Height="100"
                                Style="{StaticResource VLCSlider}" />
                    </Flyout>
                </Button.Flyout>
                <StackPanel Orientation="Horizontal">
                    <SymbolIcon Symbol="Volume" />
                    <TextBlock Text="50"
                               Style="{StaticResource TitleTextBlockStyle}"
                               Margin="12,0,0,0"
                               Foreground="#7FFFFFFF" />
                </StackPanel>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>