<UserControl x:Class="VLC_WINRT_APP.Views.UserControls.LoadingMusicLibrary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WINRT_APP.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}">

    <StackPanel Visibility="{Binding IsLoaded, Converter={StaticResource NegatedBooleanToVisibilityConverter}}"
                Margin="12"
                Background="WhiteSmoke">
        <TextBlock Text="{Binding CurrentIndexingStatus}"
                   FontWeight="Light"
                   VerticalAlignment="Center" />
    </StackPanel>
</UserControl>
