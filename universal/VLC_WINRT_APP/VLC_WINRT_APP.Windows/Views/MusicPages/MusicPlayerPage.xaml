<Page x:Class="VLC_WINRT_APP.Views.MusicPages.MusicPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:musicPlayerPageControls="using:VLC_WINRT_APP.Views.MusicPages.MusicPlayerPageControls"
      xmlns:musicNowPlayingControls="using:VLC_WINRT_APP.Views.MusicPages.MusicNowPlayingControls"
      xmlns:extensions="using:WinRTXamlToolkit.Controls.Extensions"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=MusicPlayerVM}">

    <Grid>
        <Hub x:Name="MainHub"
             Padding="0,12,0,0">
            <Hub.Sections>
                <HubSection Header="now playing"
                            Width="450">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <musicNowPlayingControls:MusicNowPlaying />
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection Header="playlist"
                            Width="450">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <ListView ItemsSource="{Binding TrackCollection.Playlist}"
                                      IsItemClickEnabled="True"
                                      SelectionMode="None"
                                      ItemTemplate="{StaticResource WPTrackTemplateWONumber}"
                                      ItemContainerStyle="{StaticResource ListViewItemStyle}">
                                <ListView.ItemContainerTransitions>
                                    <TransitionCollection>
                                        <AddDeleteThemeTransition />
                                        <EntranceThemeTransition />
                                    </TransitionCollection>
                                </ListView.ItemContainerTransitions>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsStackPanel />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <triggers:Interactions.Triggers>
                                    <triggers:EventTrigger EventName="ItemClick">
                                        <triggers:InvokeCommandAction Command="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM.TrackClickedCommand}"
                                                                      PassEventArgsToCommand="True" />
                                    </triggers:EventTrigger>
                                </triggers:Interactions.Triggers>
                            </ListView>
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection x:Uid="Biography"
                            Header="biography"
                            MaxWidth="450">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <musicPlayerPageControls:BiographyInfoControl />
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection x:Uid="PopularAlbums"
                            Header="popular albums">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <musicPlayerPageControls:PopularAlbumsInfoControl />
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection x:Uid="SimilarArtists"
                            Header="similar artists">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <musicPlayerPageControls:SimilarArtistsInfoControl />
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
            </Hub.Sections>
        </Hub>
    </Grid>
</Page>
