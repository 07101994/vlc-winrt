<SwapChainPanel x:Class="VLC_WINRT_APP.Views.MainPages.MainPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
                xmlns:extensions="using:WinRTXamlToolkit.Controls.Extensions"
                xmlns:customAppBar="using:CustomAppBarDesktop"
                xmlns:albumPageControls="using:VLC_WINRT_APP.Views.MusicPages.AlbumPageControls"
                xmlns:musicPages="using:VLC_WINRT_APP.Views.MusicPages"
                mc:Ignorable="d"
                DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}"
                RequestedTheme="{Binding ApplicationTheme, Converter={StaticResource AppThemeElementThemeConverter}}"
                x:Name="SwapChainPanel">
    <Grid.RowDefinitions>
        <RowDefinition Height="60"
                       x:Name="TopBarRowDefinition" />
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          Grid.RowSpan="3"
          Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}" />

    <Image Grid.Row="0"
           Grid.RowSpan="2"
           Source="/Assets/backgroundTop.png"
           Stretch="Uniform"
           VerticalAlignment="Top"
           extensions:ImageExtensions.FadeInOnLoaded="True" />
    <Image Stretch="Uniform"
           HorizontalAlignment="Right"
           VerticalAlignment="Bottom"
           Height="325"
           Source="ms-appx:///Assets/backgroundBot.png"
           Opacity="0.8"
           Grid.RowSpan="3"
           extensions:ImageExtensions.FadeInOnLoaded="True"
           Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}" />
    <userControls:TopBar Grid.Row="0"
                         Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}"/>
    <Frame x:Name="MainFrame"
           Grid.Row="1"
           x:FieldModifier="public"
           Navigated="MainFrame_OnNavigated">
        <Frame.ContentTransitions>
            <TransitionCollection>
                <EdgeUIThemeTransition x:Name="MainFrameThemeTransition"
                                       x:FieldModifier="public"
                                       Edge="Bottom" />
            </TransitionCollection>
        </Frame.ContentTransitions>
    </Frame>
    <userControls:LoadingMusicLibrary Grid.Row="1"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Right" />
    <customAppBar:AppBar Grid.Row="2"
                         x:Name="CommandBar"
                         x:FieldModifier="public"
                         Background="{ThemeResource ApplicationBarForegroundThemeBrush}"
                         HomeButtonClicked="CommandBar_OnHomeButtonClicked"
                         Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}">
        <customAppBar:AppBar.ExtraLeftContent>
            <userControls:BottomMiniPlayer />
        </customAppBar:AppBar.ExtraLeftContent>
    </customAppBar:AppBar>
</SwapChainPanel>