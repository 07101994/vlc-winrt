<Page x:Class="VLC_WINRT_APP.Views.MainPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=MainVM}">

    <SwapChainBackgroundPanel x:Name="SwapChainPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Stretch="UniformToFill"
               Source="ms-appx:///Assets/background.jpg"
               Opacity="0.5"
               Grid.RowSpan="3"
               Grid.ColumnSpan="2"
               Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.IsPlaying, Converter={StaticResource BackgroundVisibilityConverter}}" />
        <!--<userControls:TopBar Grid.Row="0"
                             Grid.ColumnSpan="2" />-->
        <MediaElement x:Name="FoudationMediaElement"
                      x:FieldModifier="public"
                      AudioCategory="BackgroundCapableMedia"
                      AudioDeviceType="Multimedia" />
        <userControls:LeftColumn x:Name="ColumnGrid"
                                 Grid.RowSpan="2"
                                 Visibility="{Binding Source={StaticResource Locator}, Path=VideoPlayer.IsPlaying, Converter={StaticResource NegatedBooleanToVisibilityConverter}}" />
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               Grid.Column="1"
               x:FieldModifier="public"
               Navigated="MainFrame_OnNavigated">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <EdgeUIThemeTransition Edge="Bottom" />
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </SwapChainBackgroundPanel>
</Page>