<Page x:Class="VLC_WINRT_APP.Views.MainPages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="using:VLC_WINRT_APP.Views.UserControls"
      xmlns:extensions="using:WinRTXamlToolkit.Controls.Extensions"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=MainVM}"
      RequestedTheme="Light">

    <SwapChainPanel x:Name="SwapChainPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"
                              x:Name="LeftSidebarColumnDefinition" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           x:Name="TopBarRowDefinition" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Background="White"
              Grid.RowSpan="3"
              Grid.ColumnSpan="2"
              Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}" />

        <Image Stretch="Uniform"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Height="210"
               Source="ms-appx:///Assets/backgroundTop.png"
               Opacity="0.8"
               Grid.RowSpan="3"
               Grid.ColumnSpan="2"
               extensions:ImageExtensions.FadeInOnLoaded="True"
               Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}" />
        <Image Stretch="Uniform"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Height="325"
               Source="ms-appx:///Assets/backgroundBot.png"
               Opacity="0.8"
               Grid.RowSpan="3"
               Grid.ColumnSpan="2"
               extensions:ImageExtensions.FadeInOnLoaded="True"
               Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}" />
        <userControls:TopBar Grid.Row="0"
                             Grid.ColumnSpan="2"
                             Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}" />
        <MediaElement x:Name="FoudationMediaElement"
                      x:FieldModifier="public"
                      AudioCategory="BackgroundCapableMedia"
                      AudioDeviceType="Multimedia" />
        <userControls:LeftColumn x:Name="ColumnGrid"
                                 Grid.RowSpan="2"
                                 Visibility="{Binding Source={StaticResource Locator}, Path=VideoVm.PlayingType, Converter={StaticResource BackgroundVisibilityConverter}}" />
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               Grid.Column="1"
               x:FieldModifier="public"
               Navigated="MainFrame_OnNavigated">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <EdgeUIThemeTransition x:Name="MainFrameThemeTransition"
                                           x:FieldModifier="public"
                                           Edge="Bottom" />
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </SwapChainPanel>
</Page>