<Page x:Class="VLC_WINRT_APP.Views.MainPages.MainPageHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:controls="using:VLC_WINRT_APP.Controls"
      mc:Ignorable="d"
      d:DesignHeight="768"
      d:DesignWidth="550">

    <Grid Margin="0">
        <Hub x:Name="MainHub"
             Orientation="Vertical"
             HorizontalContentAlignment="Stretch">
            <Hub.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button Style="{StaticResource TextBlockButtonStyle}"
                            FontSize="22"
                            FontWeight="Light"
                            Command="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM.PickVideo}">
                        <Button.Content>
                            <TextBlock>
                                <Run Text="open a video" />
                                <Run Text=""
                                     FontFamily="Segoe UI Symbol" />
                            </TextBlock>
                        </Button.Content>
                    </Button>
                    <Button Grid.Column="1"
                            Margin="24,0,0,0"
                            Style="{StaticResource TextBlockButtonStyle}"
                            FontSize="22"
                            FontWeight="Light"
                            Command="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM.PickVideo}">
                        <Button.Content>
                            <TextBlock>
                                <Run Text="open a stream" />
                                <Run Text=""
                                     FontFamily="Segoe UI Symbol" />
                            </TextBlock>
                        </Button.Content>
                    </Button>
                    <Button Grid.Column="2"
                            HorizontalAlignment="Right"
                            Margin="24,0,0,0"
                            Style="{StaticResource TextBlockButtonStyle}"
                            FontSize="22"
                            FontWeight="Light"
                            Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToSettingsPageCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>
                                <Run Text="settings" />
                                <Run Text=""
                                     FontFamily="Segoe UI Symbol" />
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </Hub.Header>
            <Hub.Sections>
                <HubSection Header="favorite albums"
                            HeaderTemplate="{StaticResource ColoredHeader}">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <Grid>
                                <GridView DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}"
                                          ItemsSource="{Binding FavoriteAlbums}"
                                          ItemTemplate="{StaticResource SemanticZoomInViewAlbumTemplate}">
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid Orientation="Horizontal"
                                                                   ItemHeight="200"
                                                                   ItemWidth="200" />
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                </GridView>
                                <controls:NoFavoriteAlbumsControl DataContext="{Binding FavoriteAlbums.Count}" />
                            </Grid>
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
                <HubSection Header="last viewed"
                            HeaderTemplate="{StaticResource ColoredHeader}"
                            HorizontalContentAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                    <HubSection.ContentTemplate>
                        <DataTemplate>
                            <GridView ItemsSource="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM.ViewedVideos}"
                                      ItemTemplate="{StaticResource SemanticZoomInViewMovieTemplate}"
                                      IsItemClickEnabled="True"
                                      SelectionMode="None">
                                <triggers:Interactions.Triggers>
                                    <triggers:EventTrigger EventName="ItemClick">
                                        <triggers:InvokeCommandAction Command="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM.OpenVideo}"
                                                                      PassEventArgsToCommand="True" />
                                    </triggers:EventTrigger>
                                </triggers:Interactions.Triggers>
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid Orientation="Horizontal"
                                                       ItemWidth="310"
                                                       ItemHeight="174"
                                                       Loaded="VideoItemWrapGrid_Loaded"
                                                       SizeChanged="VideoItemWrapGrid_OnSizeChanged" />
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                            </GridView>
                        </DataTemplate>
                    </HubSection.ContentTemplate>
                </HubSection>
            </Hub.Sections>
        </Hub>
    </Grid>
</Page>