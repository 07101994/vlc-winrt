<UserControl x:Class="VLC_WinRT.Views.MainPages.MusicPanes.ArtistCollectionPanes.ArtistsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WinRT.Views.MainPages.MusicPanes.ArtistCollectionPanes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:triggers="using:WinRT.Triggers"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <UserControl.Resources>
        <CollectionViewSource x:Key="GroupArtists"
                              x:Name="GroupArtists"
                              IsSourceGrouped="True"
                              Source="{Binding GroupedArtists}" />
    </UserControl.Resources>

    <Grid Margin="-12,0,-12,0"
          Background="{ThemeResource LightGray1ThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Margin="{StaticResource FrameMargin}"
                   
                   TextWrapping="NoWrap"
                   TextTrimming="CharacterEllipsis">
            <Run Text="{Binding Artists.Count}" />
            <Run Text="ARTISTS" />
        </TextBlock>
        <AppBarButton Grid.Column="1"
                      Label="Play all"
                      HorizontalAlignment="Right"
                      
                      Command="{Binding PlayAllSongsCommand}"
                      Margin="0,0,12,0">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource PlaySymbol}"
                          FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
            </AppBarButton.Icon>
        </AppBarButton>
        <SemanticZoom x:Name="SemanticZoom"
                      Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Padding="0"
                      Margin="{StaticResource FrameMargin}"
                      IsZoomOutButtonEnabled="False"
                      ViewChangeCompleted="SemanticZoom_OnViewChangeCompleted">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="ArtistListView"
                          IsItemClickEnabled="False"
                          ItemsSource="{Binding Artists}"
                          SelectedItem="{Binding CurrentArtist}"
                          SelectionMode="Single"                          
                         
                          ItemTemplate="{StaticResource ArtistHorizontalTemplate}"
                          SelectionChanged="ArtistListView_SelectionChanged">
                    <ListView.Header>
                        <Button Style="{StaticResource TextBlockButtonStyle}"
                                Command="{Binding ResetCurrentArtistAndAlbumCommand}">
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0"
                                      Grid.RowSpan="2">
                                    <Ellipse Fill="{ThemeResource MainColor}"
                                             Height="60"
                                             Width="60" />
                                    <FontIcon Glyph="{StaticResource BuddySymbol}"
                                              FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets"
                                              FontSize="26"
                                              Foreground="{ThemeResource ApplicationThirdForegroundThemeBrush}" />
                                </Grid>
                                <TextBlock Grid.Column="2"
                                           Grid.Row="0"
                                           Text="All artists"
                                           FontSize="21"
                                           FontWeight="Light"
                                           VerticalAlignment="Bottom" />
                                <TextBlock Grid.Column="2"
                                           Grid.Row="1"
                                           Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                           VerticalAlignment="Top"
                                           FontWeight="SemiLight">
                                <Run Text="{Binding Albums.Count}" />
                                <Run Text="albums," />
                                <Run Text="{Binding Tracks.Count}" />
                                <Run Text="tracks" />
                                </TextBlock>
                            </Grid>
                        </Button>
                    </ListView.Header>
                    <ListView.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="12" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Key}"
                                                   Foreground="{StaticResource MainColor}"
                                                   FontSize="23" />
                                    </Grid>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListView.GroupStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           ItemWidth="300" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <ListView x:Name="ArtistsZoomedOutView"
                          Background="{ThemeResource ApplicationBackgroundSemiTranslucentThemeBrush}"
                          VerticalContentAlignment="Center"
                          SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="VerticalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Stretch" />
                            <Setter Property="Margin"
                                    Value="6" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           ItemWidth="200" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}">
                                <TextBlock Text="{Binding Group.Key}"
                                           Margin="5,0,0,3"
                                           VerticalAlignment="Center"
                                           FontSize="26"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap"
                                           FontWeight="Light"
                                           Foreground="{ThemeResource MainColor}" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
    </Grid>
</UserControl>
