<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:VLC_WinRT.Resources.Templates"
                    xmlns:triggers="using:WinRT.Triggers"
                    xmlns:winrtext="using:WinRTXamlToolkit.Controls.Extensions"
                    xmlns:userControls="using:VLC_WinRT.Views.UserControls">

    <DataTemplate x:Key="ArtistHorizontalTemplate">
        <userControls:ArtistHorizontalTemplate />
    </DataTemplate>

    <DataTemplate x:Key="SimilarArtistTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="12" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Grid.RowSpan="2">
                <Ellipse Fill="{ThemeResource ApplicationOverlayTranslucentThemeBrush}"
                         Height="120"
                         Width="120" />
                <FontIcon Glyph="{StaticResource BuddySymbol}"
                          FontFamily="ms-appx:VLC.ttf#W10"
                          FontSize="29"
                          Foreground="{ThemeResource MainColor}" />
            </Grid>
            <Ellipse Grid.RowSpan="2"
                     Height="120"
                     Width="120">
                <Ellipse.Fill>
                    <ImageBrush Stretch="UniformToFill"
                                ImageSource="{Binding Images, Converter={StaticResource AlbumImageConverter}}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Grid.Column="2"
                       Grid.Row="0"
                       Text="{Binding Name, Converter={StaticResource ArtistStringConverter}}"
                       FontSize="25"
                       FontWeight="SemiLight"
                       VerticalAlignment="Bottom"
                       TextTrimming="CharacterEllipsis" />
            <TextBlock Grid.Column="2"
                       Grid.Row="1"
                       Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                       VerticalAlignment="Top"
                       FontWeight="SemiLight"
                       FontSize="19">
            <Run Text="{Binding Albums.Count}" />
            <Run Text="{Binding Source={StaticResource Strings}, Path=Albums}" />
            </TextBlock>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
