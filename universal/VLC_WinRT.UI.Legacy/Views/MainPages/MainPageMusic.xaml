<Page x:Class="VLC_WinRT.Views.MainPages.MainPageMusic"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:musicPanesControls="using:VLC_WinRT.Views.MainPages.MusicPanes.MusicPanesControls"
      xmlns:userControls="using:VLC_WinRT.Views.UserControls"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="600"
      x:Name="MusicLibrary"
      DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ContentPresenter x:Name="MainPageMusicContentPresenter"
                          x:FieldModifier="public"
                          Grid.Row="1"
                          Loaded="MusicPanesFrame_OnLoaded"
                          Margin="{StaticResource FrameMargin}" />
        <Grid Background="{ThemeResource ApplicationBackgroundSemiTranslucentThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="MusicViewComboBox"
                      Grid.Column="1"
                      DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}"
                      ItemsSource="{Binding MusicViewCollection}"
                      SelectedItem="{Binding MusicView, Mode=TwoWay}"
                      Style="{StaticResource VLCComboBox}"
                      Visibility="Collapsed">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="0,0,6,0"
                                   Text="{Binding Converter={StaticResource MusicViewStringifyConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ListView Grid.Column="1"
                      x:Name="PanelsListView"
                      DataContext="{Binding Source={StaticResource Locator}, Path=SettingsVM}"
                      ItemsSource="{Binding MusicViewCollection}"
                      SelectedItem="{Binding MusicView, Mode=TwoWay}"
                      IsSwipeEnabled="False"
                      IsItemClickEnabled="False"
                      SelectionMode="Single"
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle}"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      Visibility="Collapsed">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Horizontal"
                                         Height="50" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerTransitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </ListView.ItemContainerTransitions>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock x:Name="Title"
                                   Text="{Binding Converter={StaticResource MusicViewStringifyConverter}}"
                                   Foreground="{ThemeResource BasicForeground}"
                                   VerticalAlignment="Center"
                                   FontSize="19"
                                   FontWeight="SemiLight"
                                   Width="90"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="NoWrap" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <musicPanesControls:AlbumsCollectionButtons Visibility="{Binding MusicView, Converter={StaticResource MusicViewVisibilityConverter}, ConverterParameter='0'}" />
                <AppBarButton x:Name="PlayAllButton" 
                              Grid.Column="1"
                              Foreground="{ThemeResource MainColor}"
                              Style="{StaticResource AppBarButtonStyleHorizontal}"
                              Command="{Binding PlayAllSongsCommand}"
                              MinWidth="50"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,6,0">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="{StaticResource PlaySymbol}"
                                  FontFamily="ms-appx:VLC.ttf#W10" />
                    </AppBarButton.Icon>
                </AppBarButton>
                  <AppBarButton x:Name="ShuffleButton"
			                    Grid.Column="3"
                  				Visibility="{Binding MusicView, Converter={StaticResource MusicViewVisibilityConverter}, ConverterParameter='0,1,2'}"
				                Style="{StaticResource AppBarButtonStyleHorizontal}"
				                Foreground="{ThemeResource MainColor}"
                              Command="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM.PlayAllRandomCommand}"
                              MinWidth="50"
                              HorizontalAlignment="Stretch">
				      <AppBarButton.Icon>
				          <FontIcon Glyph="{StaticResource ShuffleSymbol}"
				                    FontFamily="ms-appx:VLC.ttf#W10" />
				      </AppBarButton.Icon>
				  </AppBarButton>

                <AppBarButton Grid.Column="5"
                              Label="{Binding Source={StaticResource Strings}, Path=NewPlaylist}"
                              Style="{StaticResource AppBarButtonStyleHorizontal}"
                              Foreground="{ThemeResource MainColor}"
                              Command="{Binding ShowCreateNewPlaylistPaneCommand}"
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"
                              Visibility="{Binding MusicView, Converter={StaticResource MusicViewVisibilityConverter}, ConverterParameter='3'}">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="{StaticResource AddSymbol}"
                                  FontFamily="ms-appx:VLC.ttf#W10" />
                    </AppBarButton.Icon>
                </AppBarButton>
            </Grid>
        </Grid>
        
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Wide">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PanelsListView"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MusicViewComboBox"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PlayAllButton"
                                                       Storyboard.TargetProperty="Label">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="{Binding Source={StaticResource Strings}, Path=PlayAll}" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ShuffleButton"
                                                       Storyboard.TargetProperty="Label">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="{Binding Source={StaticResource Strings}, Path=Shuffle}" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Narrow">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PanelsListView"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MusicViewComboBox"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PlayAllButton"
                                                       Storyboard.TargetProperty="Label">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ShuffleButton"
                                                       Storyboard.TargetProperty="Label">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
