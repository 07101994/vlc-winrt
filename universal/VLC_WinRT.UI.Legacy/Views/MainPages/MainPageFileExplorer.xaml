<Page x:Class="VLC_WinRT.Views.MainPages.MainPageFileExplorer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:removableStorage="using:VLC_WinRT.Controls.RemovableStorage"
      xmlns:controls="using:VLC_WINRT.Views.Controls"
      xmlns:placeholder="using:VLC_WinRT.Views.UserControls.Placeholder"
      xmlns:scrollWatchedSelector="using:ScrollWatchedSelector"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=FileExplorerVM}">
    <Page.Resources>
        <CollectionViewSource x:Key="StorageVMsGroupedByType"
                              IsSourceGrouped="True"
                              Source="{Binding StorageVMsGrouped}" />
    </Page.Resources>
    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="SidebarListView"
              Grid.Column="0"
              Grid.RowSpan="4"
              Width="250">
            <ListView ItemsSource="{Binding Source={StaticResource StorageVMsGroupedByType}}"
                      SelectedItem="{Binding CurrentStorageVM}"
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle}">
                <triggers:Interactions.Triggers>
                    <triggers:EventTrigger EventName="SelectionChanged">
                        <triggers:InvokeCommandAction Command="{Binding RemovableDeviceClicked}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                </triggers:Interactions.Triggers>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderContainerStyle>
                            <Style TargetType="ListViewHeaderItem">
                                <Setter Property="Margin"
                                        Value="-3,0"/>
                            </Style>
                        </GroupStyle.HeaderContainerStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Key, Converter={StaticResource RootFolderTypeToNameConverter}}"
                                           Style="{ThemeResource SubheaderTextBlockStyle}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Margin="{StaticResource FrameMarginLeft}"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"
                                   Foreground="{ThemeResource BasicForeground}"
                                   FontSize="16"
                                   Margin="0,12,0,0" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid x:Name="ComboBoxSelector"
              Grid.Row="0"
              Grid.Column="1"
              Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="1"
                      Width="280"
                      ItemsSource="{Binding StorageVMs}"
                      SelectedItem="{Binding CurrentStorageVM}"
                      Visibility="{Binding StorageVMs.Count, Converter={StaticResource NegatedCountToVisibilityConverter}}"
                      Style="{StaticResource VLCComboBox}">
                <triggers:Interactions.Triggers>
                    <triggers:EventTrigger EventName="SelectionChanged">
                        <triggers:InvokeCommandAction Command="{Binding RemovableDeviceClicked}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                </triggers:Interactions.Triggers>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>


        <TextBlock x:Name="CurrentFolderNameNarrowTextBlock"
                   Grid.Column="1"
                   Grid.Row="1"
                   Text="{Binding CurrentStorageVM.CurrentFolderName}"
                   Margin="16,-10,0,0"
                   Style="{ThemeResource SubheaderTextBlockStyle}"
                   VerticalAlignment="Center" 
                   Height="50"/>
        
        <Grid x:Name="FileExplorerButtonsGrid"  
              Grid.Column="1"
              Grid.Row="2"
              Margin="{StaticResource FrameMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <AppBarButton Grid.Column="0"
                          Style="{StaticResource AppBarButtonStyleHorizontal}"
                          Label="Back"
                          Command="{Binding CurrentStorageVM.GoBackCommand}"
                          Visibility="{Binding CurrentStorageVM.CanGoBack, Converter={StaticResource BooleanToVisibilityConverter}}"
                          Margin="0,0,24,0">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource PreviousPageSymbol}"
                              FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
                </AppBarButton.Icon>
            </AppBarButton>
            <TextBlock x:Name="CurrentFolderNameWideTextBlock" 
                       Grid.Column="1"
                       Text="{Binding CurrentStorageVM.CurrentFolderName}"
                       Margin="0,-10,0,0"
                       Style="{StaticResource SubheaderTextBlockStyle}"
                       VerticalAlignment="Center"/>
            <AppBarButton Grid.Column="2"
                          Style="{StaticResource AppBarButtonStyleHorizontal}"
                          HorizontalAlignment="Right"
                          Label="play folder"
                          Command="{Binding CurrentStorageVM.PlayFolderCommand}"
                          CommandParameter="{Binding CurrentStorageVM.StorageItems}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource PlaySymbol}"
                              FontFamily="ms-appx:SEGMDL2.TTF#Segoe MDL2 Assets" />
                </AppBarButton.Icon>
            </AppBarButton>
        </Grid>
        <Grid Grid.Column="1"
              Grid.Row="3"
              Margin="{StaticResource FrameMargin}">
            <placeholder:NothingToSeeHere Visibility="{Binding CurrentStorageVM.IsFolderEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <scrollWatchedSelector:ScrollWatchedListView x:Name="StorageItemsListView"
                                                         ItemsSource="{Binding CurrentStorageVM.StorageItems}"
                                                         IsItemClickEnabled="True"
                                                         SelectionMode="None"
                                                         ItemTemplate="{StaticResource FolderDataTemplate}"
                                                         IsSwipeEnabled="False"
                                                         ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                                         ItemsPanel="{StaticResource WrapPanelTemplate}"
                                                         Visibility="{Binding StorageVMs.Count, Converter={StaticResource NegatedCountToVisibilityConverter}}">
                <triggers:Interactions.Triggers>
                    <triggers:EventTrigger EventName="ItemClick">
                        <triggers:InvokeCommandAction Command="{Binding CurrentStorageVM.NavigateToCommand}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                    <triggers:EventTrigger EventName="GoingTopOrBottom">
                        <triggers:InvokeCommandAction Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoingTopOrBottomCommand}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                </triggers:Interactions.Triggers>
            </scrollWatchedSelector:ScrollWatchedListView>
        </Grid>
        <removableStorage:PlugARemovableStorage Grid.Row="1"
                                                Grid.RowSpan="3"
                                                d:IsHidden="True"
                                                Visibility="{Binding StorageVMs.Count, Converter={StaticResource CountToVisibilityConverter}}" />

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Wide">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FileExplorerButtonsGrid"
                                                       Storyboard.TargetProperty="(Grid.Row)">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="0" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ComboBoxSelector"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SidebarListView"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameWideTextBlock"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameNarrowTextBlock"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Narrow">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FileExplorerButtonsGrid"
                                                       Storyboard.TargetProperty="(Grid.Row)">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="2" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ComboBoxSelector"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SidebarListView"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameWideTextBlock"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameNarrowTextBlock"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>