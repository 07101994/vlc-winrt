<Page x:Class="VLC_WinRT.UI.Legacy.Views.MusicPages.MiniPlayerWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WinRT.UI.Legacy.Views.MusicPages"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:userControls="using:VLC_WinRT.Views.UserControls"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image x:Name="ImgCover"
                   Stretch="UniformToFill" />
            <Grid Grid.Column="2"
                  VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock x:Name="TrackName"
                           Grid.Row="0"
                           FontSize="20"
                           FontWeight="Light"
                           VerticalAlignment="Bottom"
                           TextTrimming="CharacterEllipsis" />
                <TextBlock Grid.Row="1"
                           x:Name="ArtistName"
                           FontSize="15"
                           FontWeight="Light"
                           TextTrimming="CharacterEllipsis" />
            </Grid>
            <Button x:Name="PreviousButton"
                    Grid.Column="3"
                    Margin="6,0,14,0"
                    Style="{StaticResource TextBlockButtonStyle}"
                    Click="PreviousButton_Click">
                <FontIcon x:Name="PreviousIcon"
                          Glyph="{StaticResource PreviousSymbol}"
                          FontFamily="ms-appx:VLC.ttf#W10" />
            </Button>
            <Grid x:Name="PlayPauseGrid"
                  Grid.Column="4"
                  VerticalAlignment="Center"
                  Margin="0,0,14,0">
                <Button x:Name="PlayIcon"
                        Style="{StaticResource TextBlockButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="PlayPause_Click">
                    <FontIcon Glyph="{StaticResource PlaySymbol}"
                              FontFamily="ms-appx:VLC.ttf#W10" />
                </Button>
                <Button x:Name="PauseIcon"
                        Style="{StaticResource TextBlockButtonStyle}"
                        HorizontalAlignment="Left"
                        Click="PlayPause_Click">
                    <FontIcon Glyph="{StaticResource PauseSymbol}"
                              FontFamily="ms-appx:VLC.ttf#W10" />
                </Button>
            </Grid>
            <Button x:Name="NextButton"
                    Grid.Column="5"
                    Style="{StaticResource TextBlockButtonStyle}"
                    Margin="0,0,10,0"
                    Click="NextButton_Click">
                <FontIcon x:Name="NextIcon"
                          Glyph="{StaticResource SkipNextSymbol}"
                          FontFamily="ms-appx:VLC.ttf#W10" />
            </Button>
            <Button x:Name="HomeButton"
                    Grid.Column="6"
                    Style="{StaticResource TextBlockButtonStyle}"
                    Click="ExpandWindow_Click"
                    Margin="0,0,6,0">
                <FontIcon Glyph="{StaticResource ExpandWindow}"
                          FontSize="22"
                          FontFamily="ms-appx:VLC.ttf#W10" />
            </Button>
        </Grid>
        <ListView x:Name="TracksListView"
                  Grid.Row="1"
                  Margin="{StaticResource FrameMargin}"
                  IsItemClickEnabled="True"
                  SelectionMode="None"
                  ItemContainerStyle="{StaticResource ListViewItemStyle}"
                  ItemClick="ListViewBase_OnItemClick">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Margin="{StaticResource FrameMarginTop}"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0"
                                   Grid.Row="0"
                                   x:Name="NameTextBlock"
                                   Text="{Binding Name}"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   FontWeight="SemiLight"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   FontSize="20"
                                   Margin="0,0,6,0" />
                        <TextBlock Grid.Column="0"
                                   Grid.Row="1"
                                   Text="{Binding ArtistName, Converter={StaticResource ArtistStringConverter}}"
                                   Style="{StaticResource BaseTextBlockStyle}"
                                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                   FontWeight="Light" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
