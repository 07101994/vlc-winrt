<Page x:Class="VLC_WinRT.Views.MusicPages.ArtistPageControls.ArtistPageBase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:VLC_WinRT.Views.MusicPages.ArtistPageControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      mc:Ignorable="d"
      d:DesignHeight="300"
      d:DesignWidth="400"
      DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}">

    <Page.Resources>
        <CollectionViewSource x:Key="TracksGroupedByAlbum"
                              x:Name="TracksGroupedByAlbum"
                              IsSourceGrouped="True"
                              Source="{Binding CurrentArtist.TracksGroupedByAlbum}" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <local:MainArtistHeader />
        <SemanticZoom Grid.Row="1"
                      Grid.Column="0">
            <SemanticZoom.ZoomedInView>
                <ListView x:Name="AlbumsListView"
                          ItemsSource="{Binding Source={StaticResource TracksGroupedByAlbum}}"
                          ItemTemplate="{StaticResource AlbumTrackTemplateWithRightMargin}"
                          ItemContainerStyle="{StaticResource ListViewItemStyle}"
                          IsItemClickEnabled="True"
                          SelectionMode="None">
                    <triggers:Interactions.Triggers>
                        <triggers:EventTrigger EventName="ItemClick">
                            <triggers:InvokeCommandAction Command="{Binding TrackClickedCommand}"
                                                          PassEventArgsToCommand="True" />
                        </triggers:EventTrigger>
                    </triggers:Interactions.Triggers>
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <AddDeleteThemeTransition />
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal"
                                           Margin="{StaticResource FrameMarginHorizontalPlusFooter}" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.GroupStyle>
                        <GroupStyle HeaderTemplate="{StaticResource AlbumHorizontalTemplate}" />
                    </ListView.GroupStyle>
                </ListView>
            </SemanticZoom.ZoomedInView>
            <SemanticZoom.ZoomedOutView>
                <ListView x:Name="AlbumsZoomedOutView"
                          ItemContainerStyle="{StaticResource ListViewItemStyle}"
                          ItemsSource="{Binding Source={StaticResource TracksGroupedByAlbum}, Path=CollectionGroups}"
                          IsItemClickEnabled="True"
                          SelectionMode="None">
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <AddDeleteThemeTransition />
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Margin="{StaticResource FrameMarginHorizontalPlusFooter}" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="120">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0"
                                      Grid.RowSpan="2"
                                      Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}">
                                    <FontIcon Glyph="{StaticResource AlbumDiscSymbol}"
                                              FontFamily="ms-appx:VLC.ttf#W10"
                                              FontSize="26"
                                              Foreground="{ThemeResource MainColor}" />
                                </Grid>
                                <Image Grid.Row="0"
                                       Grid.RowSpan="2"
                                       Height="120"
                                       Width="120"
                                       Stretch="UniformToFill"
                                       Source="{Binding Group.Key.AlbumImage}" />
                                <TextBlock Grid.Row="0"
                                           Grid.Column="2"
                                           Text="{Binding Group.Key.Name, Converter={StaticResource ArtistStringConverter}}"
                                           FontSize="21"
                                           FontWeight="Light"
                                           VerticalAlignment="Bottom" />

                                <AppBarButton Grid.Row="1"
                                              Grid.Column="2"
                                              Style="{StaticResource AppBarButtonStyleHorizontal}"
                                              Label="{Binding Source={StaticResource Strings}, Path=PlayAlbum}"
                                              Command="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM.PlayAlbumCommand}"
                                              CommandParameter="{Binding Group.Key.Id   }"
                                              Foreground="{ThemeResource MainColor}">
                                    <AppBarButton.Icon>
                                        <FontIcon Glyph="{StaticResource PlaySymbol}"
                                                  FontFamily="ms-appx:VLC.ttf#W10" />
                                    </AppBarButton.Icon>
                                </AppBarButton>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SemanticZoom.ZoomedOutView>
        </SemanticZoom>
        <Grid x:Name="ExtraInfoGrid"
              Grid.Row="0"
              Grid.RowSpan="2"
              Grid.Column="2"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource FrameMarginGridLength}" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="{StaticResource TitleBarMarginGridLength}" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="{StaticResource FrameMarginGridLength}" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="1"
                       Text="{Binding CurrentArtist.Biography}"
                       Style="{StaticResource BodyTextBlockStyle}"
                       TextTrimming="CharacterEllipsis"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" />
            
            <TextBlock Grid.Row="3"
                       TextTrimming="CharacterEllipsis"
                       TextWrapping="NoWrap"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Center"
                       Text="{Binding Source={StaticResource Strings}, Path=SimilarArtists}"
                       Style="{StaticResource SubheaderTextBlockStyle}" />
            <ListView x:Name="SimilarArtistsListView"
                      Grid.Row="5"
                      ItemsSource="{Binding CurrentArtist.OnlineRelatedArtists}"
                      ItemTemplate="{StaticResource SimilarArtistTemplate}"
                      ItemContainerStyle="{StaticResource ListViewItemStyle}"
                      IsItemClickEnabled="True"
                      SelectionMode="None">
                <ListView.ItemContainerTransitions>
                    <TransitionCollection>
                        <AddDeleteThemeTransition />
                    </TransitionCollection>
                </ListView.ItemContainerTransitions>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal"
                                       ItemWidth="150"
                                       HorizontalAlignment="Center"
                                       Margin="{StaticResource FooterMarginBottom}" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Wide">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExtraInfoGrid"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExtraInfoGrid"
                                                       Storyboard.TargetProperty="Width">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="700" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Medium">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExtraInfoGrid"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExtraInfoGrid"
                                                       Storyboard.TargetProperty="Width">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="350" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Narrow">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExtraInfoGrid"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
