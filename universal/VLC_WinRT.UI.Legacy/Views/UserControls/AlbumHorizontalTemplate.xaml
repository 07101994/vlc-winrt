<UserControl x:Class="VLC_WinRT.Views.UserControls.AlbumHorizontalTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WinRT.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:utils="using:VLC_WinRT.Utils"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             Margin="{StaticResource FrameMarginVertical}" >

    <Grid Height="80">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}">
            <FontIcon Glyph="{StaticResource AlbumDiscSymbol}"
                      FontFamily="ms-appx:VLC.ttf#W10"
                      FontSize="26"
                      Foreground="{ThemeResource MainColor}" />
        </Grid>
        <Image Grid.Row="0"
               Grid.RowSpan="2"
               Height="80"
               Width="80"
               Stretch="UniformToFill"
               Source="{Binding Key.Item2}" />
        <TextBlock Grid.Row="0"
                   Grid.Column="2"
                   Text="{Binding Key.Item1, Converter={StaticResource ArtistStringConverter}}"
                   FontSize="21"
                   FontWeight="Light"
                   VerticalAlignment="Bottom"/>

        <AppBarButton Grid.Row="1"
                      Grid.Column="2"
                      Style="{StaticResource AppBarButtonStyleHorizontal}"
                      x:Uid="PlayAlbumButton"
                      Label="Play album"
                      Command="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM.PlayAlbumCommand}"
                      CommandParameter="{Binding Key.Item3}"
                      Foreground="{StaticResource MainColor}">
            <AppBarButton.Icon>
                <FontIcon Glyph="{StaticResource PlaySymbol}"
                          FontFamily="ms-appx:VLC.ttf#W10" />
            </AppBarButton.Icon>
        </AppBarButton>
    </Grid>
</UserControl>
