<UserControl
    x:Class="VLC_WinRT.Views.MusicPages.MusicPlayerPageControls.PopularAlbumsInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VLC_WinRT.Views.MusicPages.MusicPlayerPageControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <GridView x:Name="PopularItemGridView"
              RequestedTheme="Dark"
              IsSwipeEnabled="False"
              SelectionMode="None"
              IsItemClickEnabled="True"
              ItemsSource="{Binding CurrentArtist.OnlinePopularAlbumItems}"
              ItemTemplate="{StaticResource PopularAlbumTemplate}">
        <GridView.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapGrid ItemHeight="185"
                          ItemWidth="185"
                          Orientation="Vertical" />
            </ItemsPanelTemplate>
        </GridView.ItemsPanel>
    </GridView>
</UserControl>
