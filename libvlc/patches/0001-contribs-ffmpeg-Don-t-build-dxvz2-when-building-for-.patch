Date: Fri, 17 Jun 2016 17:40:28 +0200
Subject: [PATCH] contribs: ffmpeg: Don't build dxvz2 when building for windows
 store

---
 contrib/src/ffmpeg/rules.mak | 5 ++++-
 1 file changed, 4 insertions(+), 1 deletion(-)

diff --git a/contrib/src/ffmpeg/rules.mak b/contrib/src/ffmpeg/rules.mak
index a266389..9a8e1b9 100644
--- a/contrib/src/ffmpeg/rules.mak
+++ b/contrib/src/ffmpeg/rules.mak
@@ -155,7 +155,10 @@ DEPS_ffmpeg += directx
 endif
 endif
 FFMPEGCONF += --target-os=mingw32 --enable-memalign-hack
-FFMPEGCONF += --enable-w32threads --enable-dxva2
+FFMPEGCONF += --enable-w32threads
+ifndef HAVE_WINSTORE
+FFMPEGCONF += --enable-dxva2
+endif
 
 ifdef HAVE_WIN64
 FFMPEGCONF += --cpu=athlon64 --arch=x86_64
