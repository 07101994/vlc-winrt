<UserControl
    x:Class="VLC_WINRT.Views.Controls.MainPage.ThumbnailsBackground"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="768"
    DataContext="{Binding Source={StaticResource Locator}, Path=ThumbnailsVM}"
    >
    <!-- TOOD: Do a zoom and clip transform to get rid of any black space -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- TODO: Add some manipulation parallax motion -->
        <!--<GridView ItemsSource="{Binding Thumbnails}">
            <GridView.ItemTemplate>
                <DataTemplate>
                    --><!-- binds to Image --><!--
                    <local:Thumbnail Margin="-5" Width="200" Height="150"></local:Thumbnail>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>-->
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/BackgroundLarge.jpg"></ImageBrush>
            </Grid.Background>
        </Grid>
    </Grid>
</UserControl>
