<views:BasePage
    x:Class="VLC_WINRT.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mainPage="using:VLC_WINRT.Views.Controls.MainPage"
    xmlns:views="using:VLC_WINRT.Views"
    xmlns:wrapPanelControl="using:VLC_WINRT.Views.Controls.WrapPanelControl"
    mc:Ignorable="d"
    d:DesignHeight="768"
    DataContext="{Binding Source={StaticResource Locator}, Path=MainPageVM}">
    
    <views:BasePage.Resources>
    </views:BasePage.Resources>
    
    <Grid Background="#FFFAFAFA" >
        <Grid Margin="30,20,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="50,50,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid x:Name="HeaderGrid">
                    <Grid.Projection>
                        <PlaneProjection/>
                    </Grid.Projection>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--<Polygon Fill="#e67e22" Points="285,0 265,50 270,50 290,0"/>-->
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="ms-appx:///Assets/Logo.png" Height="60"/>
                        <TextBlock Margin="20,0,0,0" Foreground="#e67e22">
                        <Run Text="VLC" FontSize="36" FontWeight="SemiLight"/>
                        <LineBreak/>
                        <Run Text="for WinRT Beta" FontSize="18"/>
                        </TextBlock>
                        <TextBlock
                       VerticalAlignment="Center"
                       Style="{StaticResource TitleTextStyle}"
                       Foreground="White"
                       FontSize="20"
                       Margin="10,0" >
                        </TextBlock>
                    </StackPanel>
                </Grid>
                <ListView x:Name="SectionsHeaderListView" Grid.Row="1" VerticalAlignment="Center" SelectionMode="None" IsItemClickEnabled="True" ItemClick="SectionsHeaderListView_OnItemClick" ItemsSource="{Binding Panels}" RenderTransformOrigin="0.5,0.5">
                    <ListView.RenderTransform>
                        <CompositeTransform/>
                    </ListView.RenderTransform>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <wrapPanelControl:WrapPanel Orientation="Horizontal" >
                                <wrapPanelControl:WrapPanel.ChildrenTransitions>
                                    <TransitionCollection>
                                        <EntranceThemeTransition FromHorizontalOffset="100"/>
                                        <AddDeleteThemeTransition />
                                    </TransitionCollection>
                                </wrapPanelControl:WrapPanel.ChildrenTransitions>
                            </wrapPanelControl:WrapPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" Opacity="{Binding Opacity}" TextWrapping="NoWrap" TextTrimming="None" Style="{StaticResource SubheaderTextStyle}" Foreground="Black"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="550"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" DataContext="{Binding LastViewedVM}" Style="{StaticResource ColumnGridStyle}">
                        <mainPage:Welcome Visibility="{Binding WelcomeSectionVisibile, Converter={StaticResource BooleanToVisibilityConverter}}"></mainPage:Welcome>
                        <mainPage:LastViewed Visibility="{Binding LastViewedSectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"></mainPage:LastViewed>
                    </Grid>

                    <mainPage:MediaColumn Grid.Column="1" DataContext="{Binding VideoVM}">
                    </mainPage:MediaColumn>

                    <mainPage:MediaColumn Grid.Column="2" DataContext="{Binding MusicVM}">
                    </mainPage:MediaColumn>

                    <ItemsControl Grid.Column="3" ItemsSource="{Binding ExternalStorageVM.RemovableStorageVMs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <mainPage:MediaColumn>
                                </mainPage:MediaColumn>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl Grid.Column="4" ItemsSource="{Binding DLNAVMs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <mainPage:MediaColumn>
                                </mainPage:MediaColumn>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                  
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <AppBar x:Name="BottomAppBar" Padding="10,0,10,0" Background="#e67e22" IsOpen="{Binding IsAppBarOpen, Mode=TwoWay}">
            <Grid>
                <Grid Visibility="{Binding IsNetworkAppBarShown, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Open Network Stream..."
                               Style="{StaticResource GroupHeaderTextStyle}"
                               Margin="10"></TextBlock>
                    <Grid Grid.Row="1"  Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Network URL:" Margin="10,5" VerticalAlignment="Center" Style="{StaticResource BasicTextStyle}" FontSize="20"></TextBlock>
                        <TextBox Grid.Column="1" Margin="10,5" Text="{Binding NetworkMRL, Mode=TwoWay}"></TextBox>
                        <Button Grid.Column="2" Margin="10,5" Command="{Binding PlayNetworkMRL}" CommandParameter="{Binding NetworkMRL}">
                            <TextBlock Text="Go" Style="{StaticResource BasicTextStyle}"  FontSize="16"></TextBlock>
                        </Button>
                        <Button Grid.Column="3" Margin="10,5" Command="{Binding ToggleNetworkAppBarCommand}">
                            <TextBlock Text="Cancel" Style="{StaticResource BasicTextStyle}"  FontSize="16"></TextBlock>
                        </Button>
                    </Grid>
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,10,0" Visibility="{Binding IsNetworkAppBarShown, Converter={StaticResource NegatedBooleanToVisibilityConverter}}">
                    <Button Style="{StaticResource VideoAppBarButtonStyle}"
                            Command="{Binding PickVideo}">
                    </Button>
                    <Button Style="{StaticResource NetworkAppBarButtonStyle}" Margin="10,0"
                            Command="{Binding ToggleNetworkAppBarCommand}">
                    </Button>
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
</views:BasePage>