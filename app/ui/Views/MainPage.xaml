<Page
    x:Class="VLC_WINRT.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF1D1D1D">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   x:Uid="MainPageTitle"
                   Text="VLC for WinRT"
                   Style="{StaticResource GroupHeaderTextStyle}" 
                   HorizontalAlignment="Center" 
                   Margin="50"></TextBlock>
        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Style="{StaticResource ColumnStackPanelStyle}">
                    <TextBlock x:Uid="LastViewed" Text="last viewed"  Style="{StaticResource ColumnHeaderTextStyle}"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Style="{StaticResource ColumnStackPanelStyle}">
                    <TextBlock x:Uid="Music" Text="music"  Style="{StaticResource ColumnHeaderTextStyle}"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="2" Style="{StaticResource ColumnStackPanelStyle}" DataContext="{Binding VideoVM}">
                    <TextBlock x:Uid="Movies" Text="movies" Style="{StaticResource ColumnHeaderTextStyle}"></TextBlock>
                    <ItemsControl ItemsSource="{Binding Media}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>