<views:BasePage
    x:Class="VLC_WINRT.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mainPage="using:VLC_WINRT.Views.Controls.MainPage"
    xmlns:views="using:VLC_WINRT.Views"
    mc:Ignorable="d"
    d:DesignHeight="768"
    DataContext="{Binding Source={StaticResource Locator}, Path=MainPageVM}">
    <views:BasePage.Resources>
    </views:BasePage.Resources>
    <Grid>
        <!-- Grid for Gradient -->
        <!-- Rectangle for Thumbnail Board -->
        <mainPage:ThumbnailsBackground Grid.ColumnSpan="4"></mainPage:ThumbnailsBackground>

        <Grid Margin="30,20,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       x:Uid="MainPageTitle"
                       Text="VLC for WinRT Beta"
                       Style="{StaticResource TitleTextStyle}"
                       Foreground="#FFFF8402"
                       FontSize="20"
                       Margin="0,10">
            </TextBlock>
            <HyperlinkButton Grid.Row="0" HorizontalAlignment="Right"  Foreground="#FFFF8402" Command="{Binding ShowAppBarCommand}">
                <HyperlinkButton.Content>
                    <TextBlock Text="Open File ..."></TextBlock>
                </HyperlinkButton.Content>
            </HyperlinkButton>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Grid.Row="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="550"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" DataContext="{Binding LastViewedVM}" Style="{StaticResource ColumnGridStyle}">
                        <mainPage:Welcome Visibility="{Binding WelcomeSectionVisibile, Converter={StaticResource BooleanToVisibilityConverter}}"></mainPage:Welcome>
                        <mainPage:LastViewed Visibility="{Binding LastViewedSectionVisible, Converter={StaticResource BooleanToVisibilityConverter}}"></mainPage:LastViewed>
                    </Grid>

                    <mainPage:MediaColumn Grid.Column="1" DataContext="{Binding VideoVM}">
                    </mainPage:MediaColumn>

                    <mainPage:MediaColumn Grid.Column="2" DataContext="{Binding MusicVM}">
                    </mainPage:MediaColumn>

                    <ItemsControl Grid.Column="3" ItemsSource="{Binding RemovableStorageVMs}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <mainPage:MediaColumn>
                                </mainPage:MediaColumn>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <AppBar Padding="10,0,10,0" IsOpen="{Binding IsAppBarVisible, Mode=TwoWay}">
            <Grid>
                <Grid Visibility="{Binding ToggleNetworkAppBarVisibility, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Open Network Stream..."
                               Style="{StaticResource GroupHeaderTextStyle}"
                               Margin="10"></TextBlock>
                    <Grid Grid.Row="1"  Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Network URL:" Margin="10,5" VerticalAlignment="Center" Style="{StaticResource BasicTextStyle}" FontSize="20"></TextBlock>
                        <TextBox Grid.Column="1" Margin="10,5"></TextBox>
                        <Button Grid.Column="2" Margin="10,5">
                            <TextBlock Text="Go" Style="{StaticResource BasicTextStyle}"  FontSize="16" ></TextBlock>
                        </Button>
                        <Button Grid.Column="3" Margin="10,5" Command="{Binding ShowNetworkAppBarCommand}">
                            <TextBlock Text="Cancel" Style="{StaticResource BasicTextStyle}"  FontSize="16"></TextBlock>
                        </Button>
                    </Grid>
                </Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,10,0" Visibility="{Binding ToggleNetworkAppBarVisibility, Converter={StaticResource NegatedBooleanToVisibilityConverter}}">
                    <Button Style="{StaticResource VideoAppBarButtonStyle}"
                            Command="{Binding PickVideo}">
                    </Button>
                    <Button Style="{StaticResource NetworkAppBarButtonStyle}" Margin="10,0"
                            Command="{Binding ShowNetworkAppBarCommand}">
                    </Button>
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
</views:BasePage>