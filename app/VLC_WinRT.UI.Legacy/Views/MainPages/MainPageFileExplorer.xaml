<Page x:Class="VLC_WinRT.Views.MainPages.MainPageFileExplorer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:triggers="using:WinRT.Triggers"
      xmlns:removableStorage="using:VLC_WinRT.Controls.RemovableStorage"
      xmlns:controls="using:VLC_WINRT.Views.Controls"
      xmlns:placeholder="using:VLC_WinRT.Views.UserControls.Placeholder"
      xmlns:ScrollWatcher="using:ScrollWatcher"
      mc:Ignorable="d"
      DataContext="{Binding Source={StaticResource Locator}, Path=FileExplorerVM}">
    <Page.Resources>
        <CollectionViewSource x:Key="StorageVMsGroupedByType"
                              IsSourceGrouped="True"
                              Source="{Binding StorageVMsGrouped}" />
    </Page.Resources>
    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="SidebarListView"
              Grid.Column="0"
              Grid.RowSpan="4"
              Width="250"
              Background="{ThemeResource ApplicationChromeThemeBrush}">
            <ListView ItemsSource="{Binding Source={StaticResource StorageVMsGroupedByType}}"
                      SelectedItem="{Binding CurrentStorageVM}"
                      SelectionMode="Single"
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyleNoSelectCheck}">
                <triggers:Interactions.Triggers>
                    <triggers:EventTrigger EventName="SelectionChanged">
                        <triggers:InvokeCommandAction Command="{Binding RemovableDeviceClicked}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                </triggers:Interactions.Triggers>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Height="50" 
                                           Text="{Binding Key, Converter={StaticResource RootFolderTypeToNameConverter}}"
                                           Style="{ThemeResource SubheaderTextBlockStyle}"
                                           Margin="{StaticResource FrameMarginLeft}"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="NoWrap" />
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Margin="-2,0,-19,0"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"
                                   Foreground="{ThemeResource BasicForeground}"
                                   FontSize="16"
                                   Margin="20,6" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <Grid x:Name="ComboBoxSelector"
              Grid.Row="0"
              Grid.Column="1"
              Height="50"
              Background="{ThemeResource ApplicationChromeThemeBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="1"
                      Width="280"
                      ItemsSource="{Binding StorageVMs}"
                      SelectedItem="{Binding CurrentStorageVM}"
                      Visibility="{Binding StorageVMs.Count, Converter={StaticResource NegatedCountToVisibilityConverter}}"
                      Style="{StaticResource VLCComboBox}">
                <triggers:Interactions.Triggers>
                    <triggers:EventTrigger EventName="SelectionChanged">
                        <triggers:InvokeCommandAction Command="{Binding RemovableDeviceClicked}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                </triggers:Interactions.Triggers>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <Grid x:Name="CurrentFolderNameNarrowGrid" 
              Grid.Column="1"
              Grid.Row="1"
              Height="50"
              Background="{ThemeResource ApplicationChromeThemeBrush}">
            <TextBlock x:Name="CurrentFolderNameNarrowTextBlock"
                       Text="{Binding CurrentStorageVM.CurrentFolderName}"
                       Margin="16,-10,0,0"
                       Style="{ThemeResource SubheaderTextBlockStyle}"
                       VerticalAlignment="Center"/>
        </Grid>

        <Grid x:Name="FileExplorerButtonsGrid"
              Grid.Column="1"
              Grid.Row="2"
              Background="{ThemeResource ApplicationChromeThemeBrush}"
              Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="{StaticResource FrameMarginGridLength}" />
            </Grid.ColumnDefinitions>
            <AppBarButton Grid.Column="1"
                          Style="{StaticResource AppBarButtonStyleHorizontal}"
                          Command="{Binding CurrentStorageVM.GoBackCommand}"
                          IsEnabled="{Binding CurrentStorageVM.CanGoBack}"
                          Margin="0,0,6,0">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource PreviousPageSymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
            <TextBlock x:Name="CurrentFolderNameWideTextBlock"
                       Grid.Column="2"
                       Text="{Binding CurrentStorageVM.CurrentFolderName}"
                       Margin="0,-10,0,0"
                       Style="{StaticResource SubheaderTextBlockStyle}"
                       VerticalAlignment="Center" />
            <AppBarButton Grid.Column="3"
                          Style="{StaticResource AppBarButtonStyleHorizontal}"
                          HorizontalAlignment="Right"
                          Label="{Binding Source={StaticResource Strings}, Path=PlayFolder}"
                          Foreground="{ThemeResource MainColor}"
                          Command="{Binding CurrentStorageVM.PlayFolderCommand}"
                          CommandParameter="{Binding CurrentStorageVM.StorageItems}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource PlaySymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
        </Grid>
        <Grid Grid.Column="1"
              Grid.Row="3">
            <placeholder:NothingToSeeHere Visibility="{Binding CurrentStorageVM.IsFolderEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            <ScrollWatcher:ListViewScrollWatcher x:Name="StorageItemsListView"
                                                 ItemsSource="{Binding CurrentStorageVM.StorageItems}"
                                                 IsItemClickEnabled="True"
                                                 SelectionMode="None"
                                                 ItemTemplate="{StaticResource FolderDataTemplate}"
                                                 IsSwipeEnabled="False"
                                                 ItemContainerStyle="{StaticResource ListViewItemStyle}"
                                                 ItemsPanel="{StaticResource WrapPanelTemplate}"
                                                 Visibility="{Binding StorageVMs.Count, Converter={StaticResource NegatedCountToVisibilityConverter}}"
                                                 Margin="{StaticResource FrameMargin}">
                <triggers:Interactions.Triggers>
                    <triggers:EventTrigger EventName="ItemClick">
                        <triggers:InvokeCommandAction Command="{Binding CurrentStorageVM.NavigateToCommand}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                    <triggers:EventTrigger EventName="ScrollDetected">
                        <triggers:InvokeCommandAction Command="{Binding Source={StaticResource Locator}, Path=MainVM.ScrollDetectedCommand}"
                                                      PassEventArgsToCommand="True" />
                    </triggers:EventTrigger>
                </triggers:Interactions.Triggers>
            </ScrollWatcher:ListViewScrollWatcher>
        </Grid>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Wide">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FileExplorerButtonsGrid"
                                                       Storyboard.TargetProperty="(Grid.Row)">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="0" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ComboBoxSelector"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SidebarListView"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameWideTextBlock"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameNarrowGrid"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="Narrow">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FileExplorerButtonsGrid"
                                                       Storyboard.TargetProperty="(Grid.Row)">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="2" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ComboBoxSelector"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="SidebarListView"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameWideTextBlock"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Collapsed" />
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CurrentFolderNameNarrowGrid"
                                                       Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0"
                                                    Value="Visible" />
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>