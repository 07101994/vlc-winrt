<UserControl x:Class="VLC_WinRT.Views.UserControls.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WinRT.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:triggers="using:WinRT.Triggers"
             xmlns:shell="using:VLC_WinRT.UI.UWP.Views.UserControls.Shell"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400"
             DataContext="{Binding Source={StaticResource Locator}, Path=MainVM}">

    <Grid x:Name="SidebarGrid"
          Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}"
          Width="250">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid >
            <shell:MenuDropdown HorizontalAlignment="Left"/>
        </Grid>
        <StackPanel Grid.Row="1">
            <AppBarButton x:Name="SearchButton"
                          Grid.Column="2"
                          Label="{Binding Source={StaticResource Strings}, Path=Search}"
                          Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                          Command="{Binding Source={StaticResource Locator}, Path=MainVM.GotoSearchPageCommand}"
                          Foreground="{ThemeResource MainColor}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource SearchSymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                          Label="{Binding Source={StaticResource Strings}, Path=OpenFile}"
                          Command="{Binding Source={StaticResource Locator}, Path=MediaPlaybackViewModel.PickVideoCommand}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource FileSymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                          Label="{Binding Source={StaticResource Strings}, Path=OpenStream}"
                          Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToStreamPanel}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource StreamSymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Bottom">
            <AppBarButton VerticalAlignment="Center"
                          Label="{Binding Source={StaticResource Strings}, Path=RefreshVideoLibrary}"
                          Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                          DataContext="{Binding Source={StaticResource Locator}, Path=VideoLibraryVM}"
                          Command="{Binding StartVideoIndexingCommand}"
                          IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanNegationConverter}}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource RefreshSymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="{Binding Source={StaticResource Strings}, Path=RefreshMusicLibrary}"
                          Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                          DataContext="{Binding Source={StaticResource Locator}, Path=MusicLibraryVM}"
                          Command="{Binding StartMusicIndexingCommand}"
                          IsEnabled="{Binding IsBusy, Converter={StaticResource BooleanNegationConverter}}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource RefreshSymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
            <AppBarButton Label="{Binding Source={StaticResource Strings}, Path=Settings}"
                          Style="{StaticResource AppBarButtonStyleHorizontalMenu}"
                          Command="{Binding Source={StaticResource Locator}, Path=MainVM.GoToSettingsPageCommand}">
                <AppBarButton.Icon>
                    <FontIcon Glyph="{StaticResource SettingsSymbol}"
                              FontFamily="{StaticResource VLCFont}" />
                </AppBarButton.Icon>
            </AppBarButton>
        </StackPanel>
    </Grid>
</UserControl>
