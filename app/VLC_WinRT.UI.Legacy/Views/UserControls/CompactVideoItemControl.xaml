<UserControl x:Class="VLC_WinRT.Views.UserControls.CompactVideoItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC_WinRT.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid FlyoutBase.AttachedFlyout="{StaticResource VideoInformationFlyout}"
          Holding="RootAlbumItem_Holding"
          RightTapped="Grid_RightTapped">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="{ThemeResource ApplicationOverlayTranslucentThemeBrush}">
            <FontIcon Glyph="{StaticResource FileFilledSymbol}"
                      FontFamily="{StaticResource VLCFont}"
                      FontSize="42"
                      Foreground="{ThemeResource MainColor}" />
        </Grid>
        <Image Grid.Row="0"
               Source="{Binding ThumbnailPath}"
               Stretch="UniformToFill"
               HorizontalAlignment="Center" />
        <ProgressBar Grid.Row="1"
                     VerticalAlignment="Bottom"
                     Style="{StaticResource ThinProgressBar}"
                     Value="{Binding TimeWatched, Converter={StaticResource TimeSpanSecondsDoubleConverter}}"
                     Maximum="{Binding Duration, Converter={StaticResource TimeSpanSecondsDoubleConverter}}"
                     Visibility="{Binding TimeWatched.TotalSeconds, Converter={StaticResource NegatedCountToVisibilityConverter}}" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Name}"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       FontSize="15"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,3,0" />
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <TextBlock Visibility="{Binding HasBeenSeen, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="14">
                    <Run Text="{Binding TimeWatched, Converter={StaticResource TimeSpanShortStringConverter}}" />
                    <Run Text="-" />
                </TextBlock>

                <TextBlock Text="{Binding Duration, Converter={StaticResource TimeSpanShortStringConverter}}"
                           Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           FontSize="14"
                           Margin="1,0,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>